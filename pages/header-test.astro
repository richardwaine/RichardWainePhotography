<script>
    class LuxuryExperience {
        private elements: {
            titleLines: NodeListOf<Element>;
            subtitle: Element | null;
            statCards: NodeListOf<Element>;
            actionArea: Element | null;
            heroImages: NodeListOf<Element>;
            hotCornerTrigger: Element | null;
            footerPanel: Element | null;
        };
        private currentImageIndex: number = 0;

        constructor() {
            this.elements = {
                titleLines: document.querySelectorAll('.title-line'),
                subtitle: document.querySelector('.experience-subtitle'),
                statCards: document.querySelectorAll('.stat-card'),
                actionArea: document.querySelector('.action-area'),
                heroImages: document.querySelectorAll('.hero-image'),
                hotCornerTrigger: document.getElementById('hotCornerTrigger'),
                footerPanel: document.getElementById('footerPanel')
            };
            
            this.init();
        }
        
        init(): void {
            this.setupIntersectionObserver();
            this.startAnimationSequence();
            this.setupCountingAnimations();
            this.startImageRotation();
            this.setupHotCorner();
        }
        
        setupIntersectionObserver(): void {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('revealed');
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -10% 0px'
            });
            
            // Observe all animated elements
            document.querySelectorAll('[data-delay], .experience-subtitle, .stat-card, .action-area').forEach(el => {
                observer.observe(el);
            });
        }
        
        startAnimationSequence(): void {
            // Stagger text reveal animations
            setTimeout(() => {
                this.elements.titleLines.forEach((line: Element, index: number) => {
                    const htmlElement = line as HTMLElement;
                    const delay = parseInt(htmlElement.dataset.delay || '0') || index * 100;
                    setTimeout(() => {
                        const word = line.querySelector('.word');
                        if (word) word.classList.add('revealed');
                    }, delay);
                });
            }, 500);
            
            // Subtitle reveal
            setTimeout(() => {
                if (this.elements.subtitle) {
                    this.elements.subtitle.classList.add('revealed');
                }
            }, 1200);
            
            // Stats reveal
            setTimeout(() => {
                this.elements.statCards.forEach((card: Element, index: number) => {
                    const htmlElement = card as HTMLElement;
                    const delay = parseInt(htmlElement.dataset.delay || '0') || index * 200;
                    setTimeout(() => {
                        card.classList.add('revealed');
                    }, delay);
                });
            }, 1800);
            
            // Action area reveal
            setTimeout(() => {
                if (this.elements.actionArea) {
                    this.elements.actionArea.classList.add('revealed');
                }
            }, 2400);
        }
        
        setupCountingAnimations(): void {
            const counters = document.querySelectorAll('.stat-number[data-count]');
            
            counters.forEach(counter => {
                const htmlCounter = counter as HTMLElement;
                const target = parseInt(htmlCounter.dataset.count || '0');
                let current = 0;
                const increment = target / 50;
                const duration = 2000;
                const stepTime = duration / 50;
                
                const updateCounter = () => {
                    current += increment;
                    if (current < target) {
                        counter.textContent = Math.floor(current).toString();
                        setTimeout(updateCounter, stepTime);
                    } else {
                        counter.textContent = target.toString();
                    }
                };
                
                // Start counting when element is revealed
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            setTimeout(updateCounter, 500);
                            observer.unobserve(entry.target);
                        }
                    });
                });
                
                const statCard = counter.closest('.stat-card');
                if (statCard) {
                    observer.observe(statCard);
                }
            });
        }
        
        startImageRotation(): void {
            if (this.elements.heroImages.length <= 1) return;
            
            setInterval(() => {
                // Remove active class from current image
                this.elements.heroImages[this.currentImageIndex].classList.remove('active');
                
                // Move to next image
                this.currentImageIndex = (this.currentImageIndex + 1) % this.elements.heroImages.length;
                
                // Add active class to new image
                this.elements.heroImages[this.currentImageIndex].classList.add('active');
            }, 6000); // Change image every 6 seconds
        }
        
        setupHotCorner(): void {
            const footerTrigger = document.getElementById('footerTrigger');
            if (!footerTrigger || !this.elements.footerPanel) return;
            
            let isFooterOpen = false;
            
            // Footer trigger hover to show footer immediately
            footerTrigger.addEventListener('mouseenter', () => {
                if (this.elements.footerPanel) {
                    this.elements.footerPanel.classList.add('active');
                    isFooterOpen = true;
                }
            });
            
            // Footer trigger click to toggle footer
            footerTrigger.addEventListener('click', () => {
                if (this.elements.footerPanel) {
                    if (isFooterOpen) {
                        this.elements.footerPanel.classList.remove('active');
                        isFooterOpen = false;
                    } else {
                        this.elements.footerPanel.classList.add('active');
                        isFooterOpen = true;
                    }
                }
            });
            
            // Hide footer when mouse leaves footer area
            this.elements.footerPanel.addEventListener('mouseleave', () => {
                if (this.elements.footerPanel && isFooterOpen) {
                    this.elements.footerPanel.classList.remove('active');
                    isFooterOpen = false;
                }
            });
            
            // Click anywhere outside to close
            document.addEventListener('click', (e) => {
                if (isFooterOpen && 
                    !this.elements.footerPanel?.contains(e.target as Node) &&
                    !footerTrigger?.contains(e.target as Node)) {
                    if (this.elements.footerPanel) {
                        this.elements.footerPanel.classList.remove('active');
                        isFooterOpen = false;
                    }
                }
            });
        }
    }
    
    // Initialize luxury experience
    document.addEventListener('DOMContentLoaded', () => {
        new LuxuryExperience();
    });
</script>