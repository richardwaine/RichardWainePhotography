---
export interface Props {
    text: string;
    url?: string;
    type?: 'button' | 'submit' | 'reset';
}

const { text, url, type = 'button' } = Astro.props;
const isButton = !url;
---

{isButton ? (
    <button type={type} class="btn header-btn">
        <span class="btn-text">{text}</span>
    </button>
) : (
    <a href={url} class="btn header-btn">
        <span class="btn-text">{text}</span>
    </a>
)}

<style>
    .header-btn {
        background: var(--accent);
        padding: var(--size-350) var(--size-8);
        font-size: var(--fs-350);
        box-shadow:
            0 15px 40px rgba(3, 169, 244, 0.4),
            0 0 60px rgba(3, 169, 244, 0.2);
    }

    .header-btn:hover {
        box-shadow:
            0 25px 60px rgba(3, 169, 244, 0.6),
            0 0 100px rgba(3, 169, 244, 0.4);
    }
</style>
