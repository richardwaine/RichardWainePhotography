<script>
  function initNeuralAnimation() {
    const neuralSection = document.querySelector('.neural-section');
    const titleLines = document.querySelectorAll('.neural-section .title-line');
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          titleLines.forEach((line, index) => {
            const word = line.querySelector('.word');
            const htmlLine = line as HTMLElement;
            const delay = parseInt(htmlLine.dataset.delay || '0') || index * 100;
            setTimeout(() => {
              if (word) {
                word.classList.add('revealed');
              }
            }, delay);
          });
        } else {
          // Reset animation when out of view
          titleLines.forEach((line) => {
            const word = line.querySelector('.word');
            if (word) {
              word.classList.remove('revealed');
            }
          });
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px 0px -50px 0px'
    });
    
    if (neuralSection) {
      observer.observe(neuralSection);
    }
  }

  // Initialize on page load and after view transitions
  document.addEventListener('DOMContentLoaded', initNeuralAnimation);
  document.addEventListener('astro:page-load', initNeuralAnimation);

  function initNeuralPortrait() {
    // Use the portfolioData from Astro instead of duplicating it
    const dataElement = document.getElementById('portfolio-data');
    if (!dataElement || !dataElement.textContent) return;
    const portfolioData = JSON.parse(dataElement.textContent);

    const matrixCells = document.querySelectorAll('.matrix-cell');
    const portraitScan = document.querySelector('#main-portrait');
    const dataPoints = document.querySelector('#data-points');
    
    matrixCells.forEach(cell => {
      cell.addEventListener('click', (event) => {
        const target = event.currentTarget as HTMLElement;
        const index = parseInt(target.dataset.index || '0');
        updatePortrait(index);
      });
    });

    function updatePortrait(index: any) {
      const currentData = portfolioData[index];

      // Update image
      if (portraitScan && portraitScan instanceof HTMLImageElement) {
        portraitScan.src = currentData.image;
      }

      // Update data streams
      const confidenceLevel = document.getElementById('confidence-level');
      const authenticityIndex = document.getElementById('authenticity-index');
      const impactProjection = document.getElementById('impact-projection');

      if (confidenceLevel) confidenceLevel.textContent = currentData.dataStreams.confidenceLevel;
      if (authenticityIndex) authenticityIndex.textContent = currentData.dataStreams.authenticityIndex;
      if (impactProjection) impactProjection.textContent = currentData.dataStreams.impactProjection;

      // Update data points
      if (dataPoints) {
        // Get the Astro scoped CSS attribute from the dataPoints element
        const astroScopeAttr = Array.from(dataPoints.attributes).find(attr =>
          attr.name.startsWith('data-astro-cid-')
        );
        const scopeAttrName = astroScopeAttr ? astroScopeAttr.name : null;

        dataPoints.innerHTML = '';

        currentData.characteristics.filter((characteristic: any) =>
          characteristic && characteristic.facePoint && characteristic.labelPosition && characteristic.visible !== false
        ).forEach((characteristic: any) => {
          // Create wrapper div for each characteristic (matching initial HTML structure)
          const characteristicWrapper = document.createElement('div');

          // Create face point with dot
          const facePoint = document.createElement('div');
          facePoint.className = 'face-point';
          facePoint.setAttribute('style', `position: absolute; top: ${characteristic.facePoint.top}; left: ${characteristic.facePoint.left};`);
          if (scopeAttrName) facePoint.setAttribute(scopeAttrName, '');

          const pointMarker = document.createElement('div');
          pointMarker.className = 'point-marker';
          if (scopeAttrName) pointMarker.setAttribute(scopeAttrName, '');
          facePoint.appendChild(pointMarker);

          // Create characteristic label
          const characteristicLabel = document.createElement('div');
          characteristicLabel.className = 'characteristic-label';
          characteristicLabel.setAttribute('style', `position: absolute; top: ${characteristic.labelPosition.top}; left: ${characteristic.labelPosition.left};`);
          if (scopeAttrName) characteristicLabel.setAttribute(scopeAttrName, '');

          const pointLabel = document.createElement('span');
          pointLabel.className = 'point-label';
          pointLabel.textContent = characteristic.label;
          if (scopeAttrName) pointLabel.setAttribute(scopeAttrName, '');
          characteristicLabel.appendChild(pointLabel);

          // Append elements to DOM
          characteristicWrapper.appendChild(facePoint);
          characteristicWrapper.appendChild(characteristicLabel);
          dataPoints.appendChild(characteristicWrapper);
        });

        // Add lines after a brief delay to ensure elements are rendered
        setTimeout(() => {
          const allWrappers = dataPoints.querySelectorAll(':scope > div');
          allWrappers.forEach((wrapper) => {
            const facePoint = wrapper.querySelector('.face-point') as HTMLElement;
            const label = wrapper.querySelector('.characteristic-label') as HTMLElement;

            if (!facePoint || !label) return;

            const containerRect = dataPoints.getBoundingClientRect();
            const labelRect = label.getBoundingClientRect();
            const facePointStyle = facePoint.style;

            // Calculate line start point (center of dot)
            const faceLeftStr = facePointStyle.left || '';
            const faceTopStr = facePointStyle.top || '';
            const faceLeft = parseFloat(faceLeftStr.replace('%', ''));
            const faceTop = parseFloat(faceTopStr.replace('%', ''));

            if (isNaN(faceLeft) || isNaN(faceTop)) return;

            const x1 = (faceLeft * containerRect.width / 100) + 4;
            const y1 = (faceTop * containerRect.height / 100) + 4;

            // Calculate line end point (bottom-center of label)
            const labelLeft = labelRect.left - containerRect.left;
            const labelTop = labelRect.top - containerRect.top;
            const x2 = labelLeft + (labelRect.width / 2);
            const y2 = labelTop + labelRect.height;

            // Create SVG line
            const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
            svg.setAttribute('class', 'connection-line');
            svg.setAttribute('style', 'position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;');

            const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
            line.setAttribute('x1', x1.toString());
            line.setAttribute('y1', y1.toString());
            line.setAttribute('x2', x2.toString());
            line.setAttribute('y2', y2.toString());
            line.setAttribute('stroke', 'var(--accent)');
            line.setAttribute('stroke-width', '1');
            line.setAttribute('opacity', '0.6');

            svg.appendChild(line);
            wrapper.appendChild(svg);
          });
        }, 50);
      }
    }

    // Draw initial lines for the first portrait without clearing existing HTML
    if (dataPoints) {
      setTimeout(() => {
        const containerRect = dataPoints.getBoundingClientRect();

        // Ensure container has dimensions before drawing lines
        if (containerRect.width === 0 || containerRect.height === 0) {
          return;
        }

        const existingLabels = dataPoints.querySelectorAll('.characteristic-label');

        existingLabels.forEach((label) => {
          const labelRect = label.getBoundingClientRect();
          const wrapper = label.parentElement;
          const facePoint = wrapper?.querySelector('.face-point') as HTMLElement;

          if (!facePoint) return;

          const facePointStyle = facePoint.style;

          // Calculate line endpoints
          const faceLeftStr = facePointStyle.left || '';
          const faceTopStr = facePointStyle.top || '';
          const faceLeft = parseFloat(faceLeftStr.replace('%', ''));
          const faceTop = parseFloat(faceTopStr.replace('%', ''));

          if (isNaN(faceLeft) || isNaN(faceTop)) return;

          const x1 = (faceLeft * containerRect.width / 100) + 4;
          const y1 = (faceTop * containerRect.height / 100) + 4;

          // Calculate bottom-center of label
          const labelLeft = labelRect.left - containerRect.left;
          const labelTop = labelRect.top - containerRect.top;
          const x2 = labelLeft + (labelRect.width / 2);
          const y2 = labelTop + labelRect.height;

          // Create SVG line
          const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
          svg.setAttribute('class', 'connection-line');
          svg.setAttribute('style', 'position: absolute; top: 0; left: 0; width: 100%; height: 100%; pointer-events: none;');

          const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
          line.setAttribute('x1', x1.toString());
          line.setAttribute('y1', y1.toString());
          line.setAttribute('x2', x2.toString());
          line.setAttribute('y2', y2.toString());
          line.setAttribute('stroke', 'var(--accent)');
          line.setAttribute('stroke-width', '1');
          line.setAttribute('opacity', '0.6');

          svg.appendChild(line);
          wrapper?.appendChild(svg);
        });
      }, 250);
    }
  }

  // Initialize on page load and after view transitions
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initNeuralPortrait);
  } else {
    initNeuralPortrait();
  }
  document.addEventListener('astro:page-load', initNeuralPortrait);
</script>

