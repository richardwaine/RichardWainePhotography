<style>

/*gallery*/

#gallery-section {
 /* background: var(--drkbg); */
    padding-inline:var(--size-8);
}

.gallery-container {
  container-type: inline-size;
  container-name: header-gallery;
  padding: var(--size-6) 0;
  
}

.gallery {
  --grid-row-gap: var(--size-3);

  display: grid;
  grid-template-columns: 1fr; /* Default for mobile */

  column-gap: var(--grid-column-gap);
  row-gap: var(--grid-row-gap);

  
  /* width:80%; */
  max-width: 2000px;
  margin: 0 auto;
}

/* Initially hide all images */
.gallery > div {
  display: none;
  line-height: 0;
}

/* Always show image1 and image2 on all screen sizes */
.gallery .image1,
.gallery .image2 {
  display: block;
}

.gallery div img {
  width: 100%;
  height: auto;
  box-shadow: var(--shadow);
}

/* 641px to 767px breakpoint */

@container header-gallery (min-width: 40.0625em) and (max-width: 47.9375em) {
  .gallery {
    --grid-row-gap: 1vw;

    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: 1fr; /* Explicitly set row behavior as per original */
    row-gap: var(--grid-row-gap);
  }

  /* Show only the images that were visible in the original at this breakpoint */
  .gallery .image1,
  .gallery .image2,
  .gallery .image5,
  .gallery .image6,
  .gallery .image7,
  .gallery .image8,
  .gallery .image9,
  .gallery .image10 {
    display: block;
  }
  /* Explicitly hide all other images for this specific range */
  .gallery .image3,
  .gallery .image4,
  .gallery .image11,
  .gallery .image12,
  .gallery .image13,
  .gallery .image14,
  .gallery .image15,
  .gallery .image16 {
    display: none;
  }
}

/* 768px to 1024px breakpoint */
@container header-gallery (min-width: calc(47.9375em + 1px)) and (max-width: 64em) {
  .gallery {
    --grid-row-gap: 1vw;
    --grid-column-gap: 1vw;

    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(3,1fr); 
    /* Explicitly set row behavior as per original */
    column-gap: var(--grid-column-gap);
    row-gap: var(--grid-row-gap);
  }
  /* Show only the images that were visible in the original at this breakpoint */
  .gallery .image1,
  .gallery .image2,
  .gallery .image5,
  .gallery .image6,
  .gallery .image7,
  .gallery .image8,
  .gallery .image9,
  .gallery .image10,
  .gallery .image13 {
    display: block;
  }
  /* Explicitly hide all other images for this specific range */
  .gallery .image3,
  .gallery .image4,
  .gallery .image11,
  .gallery .image12,
  .gallery .image14,
  .gallery .image15,
  .gallery .image16 {
    display: none;
  }

  .gallery-container[data-limit="8"] .gallery {
      grid-template-rows: repeat(2, 1fr);
    }
  }


/* 1025px and up breakpoint */
@container header-gallery (min-width: calc(64em + 1px)) {
  .gallery {
    --grid-row-gap: 0.5vw;
    --grid-column-gap: 0.5vw;

    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(2, 1fr);
    row-gap: var(--grid-row-gap);
    column-gap: var(--grid-column-gap);
  }
  /* Show all images for large screens */
  .gallery > div {
    display: block;
  }
}

/* end gallery */

/* Gallery limit styles */
.gallery-container[data-limit="8"] .image9,
.gallery-container[data-limit="8"] .image10,
.gallery-container[data-limit="8"] .image11,
.gallery-container[data-limit="8"] .image12,
.gallery-container[data-limit="8"] .image13,
.gallery-container[data-limit="8"] .image14,
.gallery-container[data-limit="8"] .image15,
.gallery-container[data-limit="8"] .image16 {
  display: none !important;
}

@container header-gallery (min-width: 64.0625em) {
  .gallery-container[data-limit="8"] .gallery {
    grid-template-rows: 1fr;
    padding:var(--size-6);
  }
}


