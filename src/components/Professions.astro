<style>

.professions-section-wrapper{
  padding-block:var(--size-8);
}


/* --- BASE STYLES (LARGE SCREEN LOGIC) --- */
/* These styles define the multi-column desktop layout using order: 1/99. */

.tabs, .professions-tabs {
  display: flex;
  flex-wrap: wrap;
  
}

.professions-tabs {
  justify-content: space-around;
  position: relative;
}

.professions-tab {
  margin-top: var(--size-3);
}

.tabs label, .professions-tabs label {
  padding: var(--size-3) var(--size-8);
  cursor: pointer;
  background: var(--drkbg);
  color: var(--ltclr);
  font-weight: var(--fw-bold);
  transition: background ease .2s;
  text-align: center;
  position: relative;
}

.professions-tabs label {
  display: block;
  padding: var(--size-3) var(--size-8);
  margin: var(--size-3);
  font-size: var(--fs-400);
  background: transparent;
  text-transform: uppercase;
}

.tabs .tab, .professions-tabs .professions-tab {
  width: 100%;
  padding: var(--size-8) var(--size-3) var(--size-3);
}

.professions-tabs .professions-tab {
  --_shadow: 2px 2px 10px rgba(0,0,0,.4);
  flex-grow: 1;
  display: none;
  /* padding: var(--size-8); */
  background: var(--drkbg);
  box-shadow: var(--_shadow);
}

.tabs .tab, .tabs input[type=radio], .professions-tabs input[type="radio"] {
  display: none
}

/* Tab Content Layout (Mobile default) */
.tab-content {
  display: grid;
  grid-template-columns: 1fr;
  grid-template-rows: 1fr;
  justify-items: center;
  align-items: center;
  gap: var(--size-9);
  color: var(--ltclr);
  line-height: var(--line-height-loose);
}

.tab-content img {
  width: 400px;
  height: auto;
}

.tab-content p {
  margin-block: var(--size-3);
}

.professions-tabs label, .professions-tabs h2 {
  text-transform: uppercase;
  margin-block: var(--size-3);
}

/* Checkbox/Radio Behavior */
.professions-tabs input[type="radio"]:unchecked + label + .professions-tab {
  display: block;
  transform: translateX(-100%);
  transition: transform 250ms ease-in
}

.professions-tabs input[type="radio"]:checked + label + .professions-tab {
  display: block;
  transform: translateX(0)
}


/* --- DESKTOP ENHANCEMENTS (MIN-WIDTH QUERIES) --- */

@media screen and (min-width: 48em) {
  /* Desktop Multi-Column Layout */
  .tabs label, .professions-tabs label {
    order: 1;
  }

  .tabs .tab, .professions-tabs .professions-tab {
    order: 99;
  }

  /* Desktop Grid Layout */
  .tab-content {
    grid-template-columns: 1fr 2fr;
  }

  /* Active Tab Indicator */
  .professions-tabs input:checked + label::after {
    content: '';
    position: absolute;
    top: 50px;
    left: 0;
    right: 0;
    height: 2px;
    margin: auto auto;
    background: var(--accent);
    margin-inline: var(--size-750);
  }
}
</style>

