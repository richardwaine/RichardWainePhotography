<script>
import gsap from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

// Check for reduced motion preference
const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

if (!prefersReducedMotion) {
  // Animate each slide as it enters viewport
  const slides = gsap.utils.toArray('.feature-slide');

  slides.forEach((slide: any) => {
    const content = slide.querySelector(".slide-content");
    const heading = slide.querySelector(".heading");
    const text = slide.querySelector(".slide-text");
    const image = slide.querySelector(".slide-image");

    if (content) {
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: slide,
          start: "left 80%",
          end: "left 20%",
          containerAnimation: false,
          toggleActions: "play none none reverse",
        }
      });

      if (heading) tl.from(heading, { opacity: 0, y: 400, ease: "power1.inOut", duration: 1});
      if (text) tl.from(text, { opacity: 0, y: 400, ease: "power2.Out", duration: 1}, "-=0.5");
      if (image) tl.from(image, { opacity: 0, x: 1000, y: 1000, scale: 0, ease: "slow", duration: 1}, "-=1.5");
    }
  });
} else {
  // For users who prefer reduced motion, just fade in
  gsap.set('.feature-slide', { opacity: 1 });
}
</script>

<style>
.wrapper {
  display: grid;
  width: 100%;
  overflow: hidden;
}

.features-scroller {
  display: flex;
  overflow-x: scroll;
  scroll-snap-type: x proximity;
  -webkit-overflow-scrolling: touch;
  scroll-behavior: smooth;
  gap: var(--size-5);
  padding: 0;
  margin: 0;
  list-style: none;
  width: 100%;

  /* Show scrollbar for better accessibility */
  scrollbar-width: thin;
  scrollbar-color: var(--accent) var(--drkbg);
}

.features-scroller::-webkit-scrollbar {
  height: 12px;
}

.features-scroller::-webkit-scrollbar-track {
  background: var(--drkbg);
}

.features-scroller::-webkit-scrollbar-thumb {
  background-color: var(--accent);
  border-radius: 6px;
}

.features-scroller:focus {
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}

.feature-slide {
  flex: 0 0 100%;
  scroll-snap-align: center;
  scroll-snap-stop: normal;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--drkbg);
  color: var(--ltclr);
  min-height: 500px;
}

/* Show "peeking" on mobile for affordance */
@media (max-width: 768px) {
  .feature-slide {
    flex: 0 0 95%;
  }
}

.slide-content-wrapper {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--size-10);
  margin-inline: auto;
  place-items: center;
  padding-inline: var(--size-9);
  width: 100%;
  max-width: 1400px;
}

@media (width > 1079px) {
  .slide-content-wrapper {
    grid-template-columns: 1fr 1fr;
  }
}

p {
  margin-block: var(--size-3);
}

.slide-image {
  display: block;
  margin: auto;
  height: auto;
  box-shadow: var(--shadow);
  width: min(800px, 100%);
}

.slide-content {
  margin-inline: auto;
}

.slide-content h2 {
  text-transform: uppercase;
  font-size: var(--fs-800);
  letter-spacing: 0.05em;
  color: var(--accent);
  font-weight: var(--fw-semi-bold);
  text-align: center;
}

@media (width > 767px) {
  .slide-content h2 {
    text-align: start;
  }
}

/* Respect reduced motion */
@media (prefers-reduced-motion: reduce) {
  .features-scroller {
    scroll-behavior: auto;
  }

  .feature-slide * {
    animation: none !important;
    transition: none !important;
  }
}
</style>
