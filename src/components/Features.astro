<!-- Initialize Swiper FIRST -->


<script is:inline>
    var swiper = new Swiper(".mySwiper", {
  slidesPerView: 1,
  spaceBetween: 30,
  loop: true,
  loopAdditionalSlides: 1, // Add this line
  pagination: {
    el: ".swiper-pagination",
    clickable: true,
  },
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },
});

    // Animation script AFTER Swiper initialization

    
    const currentSlideIndicator = document.querySelector('#currentSlide');
    
    swiper.slides.forEach((slide) => {
      let content = slide.querySelector(".slide-content");
      let heading = slide.querySelector(".heading");
      let text = slide.querySelector(".slide-text");
      let image = slide.querySelector(".slide-image");
      
      if (content) {
        let tl = gsap.timeline({ paused: true });
        if (heading) tl.from(heading, { opacity: 0, y: 400, ease: "power1.inOut", duration: 1});
        if (text) tl.from(text, { opacity: 0, y: 400, ease: "power2.Out", duration: 1});
        if (image) tl.from(image, { opacity: 0, x:1000, y:1000, scale:0, ease:"slow", duration:1}, "-=2");
        
        slide.animation = tl;
      }
    });
    
    swiper.on('slideChangeTransitionEnd', function () {
      if (currentSlideIndicator) {
        currentSlideIndicator.textContent = swiper.activeIndex + 1;
      }
      
      swiper.slides.forEach((slide, index) => {
        if (slide.animation) {
          if (index === swiper.activeIndex) {
            slide.animation.restart();
          } else {
            slide.animation.pause(0);
          }
        }
      });
    });
    
    if (swiper.slides[0] && swiper.slides[0].animation) {
      swiper.slides[0].animation.play();
    }
</script>







