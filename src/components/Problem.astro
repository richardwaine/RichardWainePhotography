    /* CONCEPT 5: Diagonal Triptych */
    .diagonal-triptych {
        background: #000;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .diagonal-triptych .triptych-container {
        display: flex;
        width: 100%;
        height: 100%;
    }

    .diagonal-triptych .triptych-panel {
        flex: 1;
        position: relative;
        overflow: hidden;
    }

    .diagonal-triptych .diagonal-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        clip-path: polygon(0 0, 100% 0, 85% 100%, 0 100%);
    }

    .diagonal-triptych .triptych-panel:nth-child(2) .diagonal-img {
        clip-path: polygon(15% 0, 100% 0, 85% 100%, 0 100%);
    }

    .diagonal-triptych .triptych-panel:nth-child(3) .diagonal-img {
        clip-path: polygon(15% 0, 100% 0, 100% 100%, 0 100%);
    }

    .diagonal-triptych .panel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }

    .diagonal-triptych .panel-text {
        position: absolute;
        bottom: 4rem;
        left: 2rem;
        right: 2rem;
        z-index: 2;
        color: white;
    }

    .diagonal-triptych h2 {
        font-size: 32px;
        font-weight: 700;
        text-transform: uppercase;
        line-height: 1.2;
        margin: 0;
    }

    .diagonal-triptych p {
        font-size: 18px;
        line-height: 1.6;
        margin: 0;
    }

    .diagonal-triptych p.accent {
        font-size: 20px;
        font-weight: 700;
    }

    .diagonal-triptych .highlight {
        color: #03a9f4;
    }

    @media (max-width: 1024px) {
        .diagonal-triptych .triptych-container {
            flex-direction: column;
        }

        .diagonal-triptych .diagonal-img,
        .diagonal-triptych .triptych-panel:nth-child(2) .diagonal-img,
        .diagonal-triptych .triptych-panel:nth-child(3) .diagonal-img {
            clip-path: none;
        }
    }
