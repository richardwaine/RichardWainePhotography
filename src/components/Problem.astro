---
export interface Props {
    title?: string;
    description?: string;
    prefixText?: string;
    highlightText?: string;
    suffixText?: string;
}

const {
    title = "DO YOU HATE HAVING YOUR PICTURE TAKEN?",
    description = "LACK OF CONFIDENCE, FEAR OF FAILURE, AND FEELING THAT YOU AREN'T PHOTOGENIC,<br>PREVENT YOU FROM SHOWING YOUR TRUE SELF",
    prefixText = "A",
    highlightText = "PROFESSIONAL HEADSHOT",
    suffixText = "EXPERIENCE CAN CHANGE EVERYTHING"
} = Astro.props;
---

<div class="wrapper">
		<div class="benefits center" id="problemContent">
		    <p class="section-title spacing">{title}</p>
		    <p class="paragraph spacing" set:html={description}></p>
		    <p class="benefits paragraph one spacing">{prefixText}<h2 class="benefits h2 spacing"> {highlightText}</h2>
		    <p class="benefits paragraph two spacing"> {suffixText}</p>
		</div>


</div>






<style>

    /*benefits section style*/

    .wrapper{
        padding-block:var(--size-7);
        background: white;
    }

:is(.benefits.paragraph, .benefits.h2){
    font-size:var(--fs-450);
    font-family:var(--ff-primary);
    font-weight:var(--fw-normal)
    /* line-height:1.7; */
   
}

:is(.benefits.one, .benefits.h2, .paragraph.two){
    display:inline;
  
}


/*problem section style*/
.problem{
    font-size:var(--fs-600);

   
 


&.h2{
  display:inline;


&.problem.h2,&.problem.h3{
  font-size:var(--fs-600);

  }
}}

.benefits{
    padding-block:var(--size-3)
}
.benefits > p{
    /* padding-block:var(--size-3); */
}

.wrapper{
    display:grid;
    margin-inline:auto;
}




</style>

<script>
import gsap from 'gsap';

document.addEventListener('DOMContentLoaded', () => {
    const problemContent = document.querySelector('#problemContent');

    if (problemContent) {
        // Set initial state
        gsap.set(problemContent, { y: 40, opacity: 0 });

        // Create intersection observer for animation trigger
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    gsap.to(problemContent, {
                        y: 0,
                        opacity: 1,
                        duration: 1,
                        ease: "power3.out"
                    });
                } else {
                    gsap.set(problemContent, { y: 40, opacity: 0 });
                }
            });
        }, {
            threshold: 0.3,
            rootMargin: '0px 0px -50px 0px'
        });

        observer.observe(problemContent);
    }
});
</script>