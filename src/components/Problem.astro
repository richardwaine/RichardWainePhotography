    /* CONCEPT 5: Diagonal Triptych - SVG clipPath Method */
    .diagonal-triptych {
        
        display: grid;
        grid-template-columns:1fr;
        grid-template-rows: auto auto auto;
        
        gap:0;
        place-items: center;
        width: 100%;
        height: 100%;
        padding-block:var(--size-8);

        /* Border thickness controls */
        --_triptych-border:2.25%;
        --_triptych-border-top: calc( var(--_triptych-border) + .5%);
        --_triptych-border-right: var(--_triptych-border);
        --_triptych-border-bottom: calc( var(--_triptych-border) + .5%);
        --_triptych-border-left: var(--_triptych-border);
    }

    .diagonal-triptych .triptych-container {
        display: flex;
        width: 100%;
        height:auto;
        /* height: 50%; */
        max-inline-size:80%;
        justify-self:center;
        gap: 0;
        
       
    }

    .diagonal-triptych .triptych-panel {
        flex: 1;
        position: relative;
        overflow: visible;
        background: #000;
        background:linear-gradient(270deg,#000, var(--accent))
        
        
    }

    .diagonal-triptych .triptych-panel::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;


    }

    /* Apply CSS clipPaths */
    .diagonal-triptych .panel-left {
        clip-path: polygon(0% 0%, 100% 0%, 85% 100%, 0% 100%);
    }

    .diagonal-triptych .panel-left::before {
     

        clip-path: polygon(
            var(--_triptych-border-left) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(85% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
      
    }

    .diagonal-triptych .panel-center {
        clip-path: polygon(15% 0%, 100% 0%, 85% 100%, 0% 100%);
        z-index: 1;
        margin-inline:-4%;
    }

    .diagonal-triptych .panel-center::before {
        clip-path: polygon(
            calc(15% + var(--_triptych-border-left)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(85% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
    }

    .diagonal-triptych .panel-right {
        clip-path: polygon(15% 0%, 100% 0%, 100% 100%, 0% 100%);
    }

    .diagonal-triptych .panel-right::before {
        clip-path: polygon(
            calc(15% + var(--_triptych-border-left)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
    }

    .diagonal-triptych .diagonal-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: relative;
        z-index: 1;
   
    }

    .diagonal-triptych .panel-left .diagonal-img {
        clip-path: polygon(
            var(--_triptych-border-left) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(85% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
    
    }

    .diagonal-triptych .panel-center .diagonal-img {
        clip-path: polygon(
            calc(15% + var(--_triptych-border-left)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(85% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
    }

    .diagonal-triptych .panel-right .diagonal-img {
        object-position: 20%;
        clip-path: polygon(
            calc(15% + var(--_triptych-border-left)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) var(--_triptych-border-top),
            calc(100% - var(--_triptych-border-right)) calc(100% - var(--_triptych-border-bottom)),
            var(--_triptych-border-left) calc(100% - var(--_triptych-border-bottom))
        );
    
    }

    .diagonal-triptych .panel-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .diagonal-triptych .problem-text-top {
        text-align: center;
        /* margin-bottom: 3rem; */
        max-width: 80%;
        margin-inline: auto;
    }

    .diagonal-triptych .problem-title {
        font-size: var(--fs-800); /* 32px */
        font-weight: 700;
        text-transform: uppercase;
        line-height: var(--line-height-tight);
        margin: 0 0 var(--size-7) 0;
