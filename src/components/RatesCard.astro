/*rates page*/
.tabs-container{
  width: 100%;
  height:min-content;
  margin:0 auto;
  overflow: hidden;

  background:var(--ltclr);
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}

.toggle-wrapper{
  position: relative;
  display: inline-flex;
  background: var(--secondary-color);
  clip-path: polygon(15px 0, 100% 0, calc(100% - 15px) 100%, 0 100%);
  padding: calc( var(--size-1) / 2 );
  margin: 0 auto;
  height: fit-content;
  overflow: visible;
  width:min(500px,95%);
  
}

.toggle-btn{
  position: relative;
  z-index: 2;
  padding: var(--size-3) var(--size-4);
  background: transparent;
  border: none;
  font-family: var(--ff-primary);
  font-size: var(--fs-300);
  text-transform: uppercase;
  font-weight: var(--fw-bold);
  letter-spacing: 1.5px;
  cursor: pointer;
  transition: color 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--head-color);
  min-width: 50%;
  
}

.toggle-btn.active{
  color: var(--ltclr);
  
}

.toggle-slider{
  position: absolute;
  z-index: 1;
  top: calc(var(--size-225) / 2);
  left: var(--size-225);
  width: calc(50% -  10px);
  height:calc(100% - 10px);
  background: var(--accent);
  clip-path: polygon(14px 0, 100% 0, calc(100% - 14px) 100%, 0 100%);
  transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  transform-style: preserve-3d;
  animation: buttonGlow 4s ease-in-out infinite;
  box-shadow:
    0 25px 60px var(--glow-clr-strong),
    0 15px 35px var(--glow-clr-medium),
    0 0 100px rgba(3, 169, 244, 0.25),
    inset 0 1px 2px var(--highlight-clr-soft),
    inset 0 -1px 2px rgba(0, 0, 0, 0.1);
  
}

.toggle-slider::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, var(--highlight-clr-bright), transparent);
  transform: skewX(-20deg);
  transition: left 0.8s ease;
}

@keyframes buttonGlow {
  0%, 100% {
    box-shadow:
      0 25px 60px var(--glow-clr-strong),
      0 15px 35px var(--glow-clr-medium),
      0 0 100px rgba(3, 169, 244, 0.25),
      inset 0 1px 2px var(--highlight-clr-soft),
      inset 0 -1px 2px rgba(0, 0, 0, 0.1);
  }
  50% {
    box-shadow:
      0 30px 70px rgba(3, 169, 244, 0.6),
      0 18px 40px rgba(3, 169, 244, 0.4),
      0 0 120px rgba(3, 169, 244, 0.35),
      inset 0 1px 2px rgba(255, 255, 255, 0.25),
      inset 0 -1px 2px rgba(0, 0, 0, 0.1);
  }
}

