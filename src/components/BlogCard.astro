---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  category: string;
  imageSrc: ImageMetadata;
  imageAlt: string;
  cardCategory: string;
  blogTitle: string;
  blogExcerpt: string;
  slug: string;
}

const { category, imageSrc, imageAlt, cardCategory, blogTitle, blogExcerpt, slug } = Astro.props;
---

<div class="blog-card" data-category={category}>
        <Image src={imageSrc} alt={imageAlt} loading="lazy" width={400} height={225} />
        <div class="blog-card-content">
              <span class="blog-card-category">{cardCategory}</span>
              <h3 class="blog-card-title">{blogTitle}</h3>
              <p class="blog-card-excerpt">{blogExcerpt}</p>
              <a href={`/blog/${slug}`} class="read-more">Read More<span class="sr-only"> about {blogTitle}</span></a>
        </div>
</div>

          

<style>




h3 {
  font-size: var(--fs-400);
  font-weight:var(--fw-bold);
  text-transform:uppercase;
}

a {
  color: var(--accent);
}


.blog-card {
  background: var(--ltclr);
  border: 1px solid #e5e5e5;
  color: var(--blkclr);
  transition: box-shadow 0.2s ease;
  border-radius: var(--size-250);
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.blog-card:hover {
  box-shadow: 0 8px 24px var(--shadow-clr-subtle);
}

.blog-card img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  object-position: center;
}

.blog-card-content {
  padding:var(--size-3);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  line-height: var(--line-height-normal);
}

.blog-card-category {
  display: none;
  padding: var(--size-2);
  background: transparent;
  color: var(--blkclr);
  font-size:var(--fs-350);
  margin-bottom: var(--size-3);

}

.blog-card-excerpt {
  color: var(--blkclr);
  font-size:var(--fs-350);
  margin-bottom: var(--size-3);
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.blog-card h3 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-wrap: break-word; 
  line-height: var(--line-height-tight);
  margin-block:var(--size-3);
}

.read-more {
  display: inline-block;
  padding: var(--size-2) var(--size-3);
  background: var(--ltclr);
  color: var(--blkclr);
  font-size:var(--fs-350);
  border: 1px solid var(--blkclr);
  transition: all 0.2s ease;
  margin-top: auto;
  width: fit-content;
}

.read-more:hover {
  background: var(--blkclr);
  color: var(--ltclr);
}

.read-more:focus-visible {
  /* outline: none; */
  /* box-shadow: 0 0 0 2px var(--blkclr); */
  outline:2px solid orange;
  outline-offset: 2px;   
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;
}

/* ==========================================
   TABLET - min-width: 48em (768px)
   ========================================== */
@media (min-width: 48em) {
  .main-content {
    grid-template-columns: 280px 1fr;
  }

  .blog-card img {
    object-fit:cover;
    width:100%;
  
  }
}

</style>
