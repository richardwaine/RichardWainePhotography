---
import PrimaryButton from './PrimaryButton.astro';
import { buildServiceSchema } from '../utils/schema';

import { Image } from 'astro:assets';
import ChubbContactSheet from '../assets/images/office-headshots/Chubb - ContactSheet (square).jpg';
import SallieMaeContactSheet from '../assets/images/office-headshots/SallieMae - ContactSheet (square).jpg';
import HavtechContactSheet from '../assets/images/office-headshots/Havtech - ContactSheet (square).jpg';
import KenGiglio from '../assets/images/office-headshots/KenGiglio - 0060 (500px).jpg';
import TsedeyAragie from '../assets/images/office-headshots/TsedeyAragie - 0018 (500px).jpg';
import AccelerateMortgage from '../assets/images/office-headshots/AccelerateMortgage - 0185 (500px).jpg';
import ShreePatel from '../assets/images/office-headshots/ShreePatel - 0105 (500px).jpg';
import RamiCastillo from '../assets/images/office-headshots/RamiCastillo - 0091 (500px).jpg';
import JasonCooley from '../assets/images/office-headshots/JasonCooley - 0032 (500px).jpg';
import CamilleSwann from '../assets/images/office-headshots/CamilleSwann - 0105 (500px).jpg';
import DebbieKerchner from '../assets/images/office-headshots/DebbieKerchner - 0063 (500px).jpg';

// Generate Service schema for office headshots
const officeHeadshotsSchema = buildServiceSchema(
  "Corporate Office Headshots",
  "On-Location Office Headshots",
  "On-location headshots for teams and companies. Consistent images for maximum impact. Align your team profile images with your company's brand. Save time, money, and increase productivity with studio-quality headshots at your office.",
  "Richard Waine Photography",
  "Lancaster",
  "PA",
  "+1-717-509-9274",
  ["Pennsylvania", "Maryland", "Delaware"]
);

---

<div class="wrapper office-headshots-section-wrapper">
      <div class="office-headshots">

          <h2 class="section-title white office-headshots spacing">Office Headshots</h2>
          
    
          <div class="office-headshots-text">
              <p class="">
              CONSISTENT IMAGES FOR MAXIMUM IMPACT
          
              </p>

              <p class="">ALIGN YOUR TEAM PROFILE IMAGES WITH YOUR COMPANY'S BRAND</p>
              <p class="">YOU SPEND AN ENORMOUS AMOUNT OF MONEY ON BRANDING, MARKETING<br>AND COMMUNICATING COMPANY VALUES IN ORDER TO INCREASE MARKET SHARE AND GENERATE REVENUE
              </p>
          </div>
    
    
      </div>

      <div class="image-container">


      
      <Image src={SallieMaeContactSheet} alt="Corporate employee headshot contact sheet grid featuring diverse Sallie Mae team members in variety of business casual and professional attire photographed against white backdrop by Richard Waine Photography corporate headshot photographer in Delaware, Sallie Mae Employee Headshots, Team Headshots, Office Headshots" loading="lazy" class="contact-sheet contact-sheet1" height={1080} width={1080}/>
      

      <div class="image-grid image-grid1">
          <div class="quad-image-grid">

          <Image src={KenGiglio} alt="Professional LinkedIn headshot of man with clean-shaven head and trimmed gray goatee and mustache wearing navy blue suit jacket with white open-collar dress shirt photographed against seamless white backdrop with professional lighting by Richard Waine Photography" loading="lazy"  height={500} width={500}/>

       <Image src={TsedeyAragie} alt="Professional business headshot of African-American woman with shoulder-length reddish-brown wavy hair and warm smile wearing navy blue blazer over white collared blouse with diamond stud earrings photographed against seamless white backdrop by Richard Waine" loading="lazy" height={500} width={500} />

      <Image src={AccelerateMortgage} alt="Professional business headshot of woman with long straight dark brown hair styled with center part and bright engaging smile with white teeth wearing black square neckline top photographed on location against seamless white backdrop by Richard Waine photographer in Newark Delaware" loading="lazy" height={500} width={500} />

      <Image src={ShreePatel} alt="Professional executive headshot of man with short dark hair wearing rectangular frame eyeglasses charcoal gray suit jacket over white dress shirt with black and gray plaid patterned tie photographed against white background by Richard Waine Photography." loading="lazy" height={500} width={500} />
    

      
      
        </div> 

      </div>
      <Image src={ChubbContactSheet} alt="Corporate team headshot contact sheet displaying 34 diverse Chubb insurance company employees in business professional and business casual attire photographed with consistent gray studio background on location at Chubb offices by Richard Waine, Chubb Insurance,Insurance Company Headshots, Team Headshots, Office Headshots" loading="lazy" class="contact-sheet contact-sheet2" height={1080} width={1080}/>

        
      
      <div class="image-grid image-grid2">
        <div class="quad-image-grid">

      <Image src={RamiCastillo} alt="Professional business headshot of Argentinian male marketing executive with short curly black hair styled with defined curls and warm bright smile wearing charcoal gray textured suit jacket over crisp white dress shirt photographed against white studio background by Richard Waine" loading="lazy" height={500} width={500} />


      
      <Image src={DebbieKerchner} alt="Professional business headshot of female marketing executive with long wavy dark brown hair with blonde balayage highlights and warm engaging smile wearing gold hoop earrings and black v-neck top photographed against white studio background by Richard Waine Photography" loading="lazy"  height={500} width={500}/>


      <Image src={CamilleSwann} alt="Professional business headshot of caucasian woman in banking industry with shoulder-length brown hair with subtle highlights and gold stud earrings wearing black blazer over black and white striped collared blouse photographed against white studio background" loading="lazy" height={500} width={500} />

      <Image src={JasonCooley} alt="Professional linkedin profile headshot of male project manager with short styled reddish-brown hair and full long reddish-brown beard wearing black suit jacket over white dress shirt photographed against white studio background by Richard Waine Photography Lancaster" loading="lazy" height={500} width={500} />


      

        </div>
      
      </div>
      
    <Image src={HavtechContactSheet} alt="Large-scale corporate team headshot contact sheet grid displaying Havtech company employees in business casual and professional attire predominantly featuring blue and gray tones photographed against white background by Richard Waine Photography team headshot photographer Baltimore Maryland, team headshots, company headshots, office headshots" loading="lazy" class="contact-sheet contact-sheet3" height={1080} width={1080}/>

    


    </div> 


      <div class="office-headshots-two center spacing white">
          <p>ON LOCATION HEADSHOTS SAVE TIME, MONEY, AND INCREASE PRODUCTIVITY</p>
          <p>LET ME BRING THE STUDIO TO YOU!</p>
      </div>

      <div class="button-center">
          <div class="button-wrapper">
            <PrimaryButton text="REQUEST PROPOSAL" url="/request-proposal" />
          </div>
      </div>
    </div>

<script type="application/ld+json" set:html={JSON.stringify(officeHeadshotsSchema)} />

<style>

 .office-headshots-section-wrapper{
  padding-block:var(--size-8);
  }

.office-headshots{
    text-align:center;
    color:var(--ltclr);
}

.office-headshots-text p{
    margin-block:var(--size-4);
    line-height:var(--line-height-relaxed);
}
.office-headshots-text p:nth-child(1){
    font-weight:var(--fw-bold);
}

.office-headshots-two p:not(:first-child){
  margin-top:var(--size-3);
}

.office-headshots-two{
  margin-block:var(--size-3);
}

.button-center {
  display: flex;
  justify-content: center;
  margin-top: var(--size-5);

  
}

/*office headshots images*/
.image-container{
  display:grid;
  grid-template-columns: 1fr;
  grid-template-rows:1fr;
  width:100%;
  align-items:center;
  justify-items:center;
  height:min-content;
 
}
  
  .image-container > *{
    --_shadow:2px 5px 10px var(--shadow-clr-medium);

    max-width:400px;
    max-height:auto;
    box-shadow:var(--_shadow);
    margin-block: var(--size-3);
  }

.contact-sheet1,.contact-sheet3,.image-grid1{
  display:none;
}


 /* ==========================================
   LARGE DESKTOP - min-width: 48em (768px)
   ========================================== */

  @media screen and (min-width: 48em){
    .image-container{
    display:grid;
      width:100%;
      grid-template-columns: repeat(5, 1fr);
      justify-content:space-between;
      gap:var(--size-7);
      padding-block:var(--size-7);
      margin-inline:0;
   }

   .contact-sheet1,.contact-sheet3,.image-grid1{
     display:block;
   }
  }  

  
 /*small image grids*/
.quad-image-grid{
  display:grid;
  grid-template-columns:1fr 1fr ;
  grid-template-rows:1fr;
  place-items:center;
  grid-auto-rows: auto;
  justify-content:center;
  width:100%;
  height:auto;
  gap:var(--grid-row-gap);
}
  
.quad-image-grid > *{ 
   width:100%;
   height:auto;

  }
  

  .contact-sheet{
    width:100%;
    height:auto;
    
  }

</style>