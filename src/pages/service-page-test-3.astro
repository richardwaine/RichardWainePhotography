---
// @ts-nocheck
import { Image } from 'astro:assets';
import MainLayout from "../layouts/MainLayout.astro"
import PrimaryButton from "../components/PrimaryButton.astro"
import WilliamAdote from "../assets/images/features/Headshot_20240919_William Adote_Richard Waine_Lancaster_PA_0023 (horizontal) - compressed.jpg"

export interface Props {
  // SEO
  pageTitle?: string;
  metaDescription?: string;

  // Hero Section
  heroTitle?: string;
  heroTitleAccent?: string;
  heroDescription?: string;
  heroButtonText?: string;

  // Blueprint Callouts
  callout1?: string;
  callout2?: string;

  // Pillar Cards
  pillar1Num?: string;
  pillar1Title?: string;
  pillar1Description?: string;

  pillar2Num?: string;
  pillar2Title?: string;
  pillar2Description?: string;

  pillar3Num?: string;
  pillar3Title?: string;
  pillar3Description?: string;

  // System Section Row 1
  systemRow1Title?: string;
  systemRow1Description?: string;
  methodItem1?: string;
  methodItem2?: string;
  methodItem3?: string;

  // System Section Row 2
  systemRow2Title?: string;
  systemRow2Description?: string;

  // Footer
  footerTitle?: string;
  footerDescription?: string;
  footerButtonText?: string;

  // Button URLs
  heroButtonUrl?: string;
  systemRow2ButtonText?: string;
  systemRow2ButtonUrl?: string;
  footerButtonUrl?: string;
}

const {
  pageTitle = 'Business Headshots | Richard Waine Photography',
  metaDescription = 'Professional business headshot photography services',

  heroTitle = 'Business',
  heroTitleAccent = 'Headshots',
  heroDescription = 'A headshot is not a picture. It is a data point in your client\'s decision-making process. We build images that command authority.',
  heroButtonText = 'GET PRICING',

  callout1 = 'CONFIDENCE',
  callout2 = 'APPROACHABILITY',

  pillar1Num = '01 / DISARM',
  pillar1Title = 'Nervous System Regulation',
  pillar1Description = "We don't leave your expression to chance. Using a specific coaching sequence, we direct the facial muscles that trigger the 'Trust & Authority' response in the viewer's brain.",

  pillar2Num = '02 / ALIGN',
  pillar2Title = 'Industry Calibrations',
  pillar2Description = 'The "look" of a Hedge Fund CEO differs from a Tech Founder. We align your micro-expressions with your specific vertical\'s expectations.',

  pillar3Num = '03 / EXECUTE',
  pillar3Title = 'Neural Analysis',
  pillar3Description = 'Post-session, we review assets through the lens of human perceptionâ€”ensuring the final choice projects maximum credibility.',

  systemRow1Title = 'The Directing System',
  systemRow1Description = 'I don\'t expect you to know what to do with your hands, your chin, or your eyes. My job is to give you clear, actionable cues that result in a natural, powerful presence.',
  methodItem1 = 'Real-time image tethering for instant feedback',
  methodItem2 = 'Advanced lighting geometry to define features',
  methodItem3 = 'Wardrobe consultation based on color psychology',

  systemRow2Title = 'Consistent Global Scaling',
  systemRow2Description = 'Managing teams across multiple cities? We provide a single standard of excellence. Whether your team is in Lancaster or Tokyo, the brand remains cohesive.',

  footerTitle = 'Ready to elevate your brand?',
  footerDescription = 'Stop settling for "good enough" headshots. Invest in your digital handshake.',
  footerButtonText = 'GET PRICING',

  heroButtonUrl = '/rates',
  systemRow2ButtonText = 'GET PRICING',
  systemRow2ButtonUrl = '/rates',
  footerButtonUrl = '/rates',
} = Astro.props;

---

<MainLayout title={pageTitle} description={metaDescription}>

<body>


<section class="hero">
  <div class="hero-text">
    <h1>{heroTitle} <br><span class="cyan">{heroTitleAccent}</span></h1>
    <p class="hero-p">{heroDescription}</p>

    <div class="button-wrapper">
      <PrimaryButton text={heroButtonText} url={heroButtonUrl}/>
    </div>
   



  </div>
  <div class="hero-visual">
    <div class="blueprint-box">
      <div class="portrait-sim">
        <Image src={WilliamAdote}  alt=""/>
      </div>

      <div class="callout c-1">{callout1}</div>
      <div class="callout c-2">{callout2}</div>
    </div>
  </div>
</section>

<section class="pillars">
  <div class="pillar-card">
    <span class="pillar-num">{pillar1Num}</span>
    <h3>{pillar1Title}</h3>
    <p>{pillar1Description}</p>
  </div>
  <div class="pillar-card">
    <span class="pillar-num">{pillar2Num}</span>
    <h3>{pillar2Title}</h3>
    <p>{pillar2Description}</p>
  </div>
  <div class="pillar-card">
    <span class="pillar-num">{pillar3Num}</span>
    <h3>{pillar3Title}</h3>
    <p>{pillar3Description}</p>
  </div>
</section>

<section class="system-section">
  <div class="system-row">
    <div class="system-image">
       <div style="position:absolute; inset:0; display:flex; align-items:center; justify-content:center; color:#333;">[BEHIND THE SCENES]</div>
    </div>
    <div class="system-content">
      <h2>{systemRow1Title}</h2>
      <p>{systemRow1Description}</p>
      <ul class="method-list">
        <li class="method-item"><span>+</span> {methodItem1}</li>
        <li class="method-item"><span>+</span> {methodItem2}</li>
        <li class="method-item"><span>+</span> {methodItem3}</li>
      </ul>
    </div>
  </div>

  <div class="system-row reverse">
    <div class="system-image">
       <div style="position:absolute; inset:0; display:flex; align-items:center; justify-content:center; color:#333;">[GLOBAL CAPABILITIES]</div>
    </div>
    <div class="system-content">
      <h2>{systemRow2Title}</h2>
      <p>{systemRow2Description}</p>
      <div class="button-wrapper">
        <PrimaryButton text={systemRow2ButtonText} url={systemRow2ButtonUrl}/>
      </div>
    </div>
  </div>
</section>

<section class="global-footer">
  <h2>{footerTitle}</h2>
  <p style="color: var(--text-dim); margin-bottom: 40px;">{footerDescription}</p>
  <div class="button-wrapper">
    <PrimaryButton text={footerButtonText} url={footerButtonUrl}/>
  </div>
</section>

<script>
import gsap from 'gsap';
import { ScrollTrigger } from 'gsap/ScrollTrigger';

gsap.registerPlugin(ScrollTrigger);

document.addEventListener('astro:page-load', () => {
  // Animate pillar cards on scroll
  gsap.utils.toArray('.pillar-card').forEach((card: any, index) => {
    gsap.from(card, {
      opacity: 0,
      y: 60,
      rotateX: -15,
      duration: 1,
      ease: "power3.out",
      scrollTrigger: {
        trigger: card,
        start: "top 80%",
        end: "top 50%",
        scrub: 1
      }
    });
  });

  // Animate system content rows
  gsap.utils.toArray('.system-content').forEach((content: any) => {
    gsap.to(content, {
      opacity: 1,
      y: 0,
      duration: 1.2,
      ease: "power2.out",
      scrollTrigger: {
        trigger: content,
        start: "top 75%",
        end: "top 40%",
        scrub: 1
      }
    });
  });

  // Parallax effect on system images
  gsap.utils.toArray('.system-image').forEach((image: any) => {
    gsap.to(image, {
      y: -50,
      ease: "none",
      scrollTrigger: {
        trigger: image,
        start: "top bottom",
        end: "bottom top",
        scrub: true
      }
    });
  });

  // Blueprint callouts animation
  gsap.from('.callout', {
    opacity: 0,
    x: -30,
    stagger: 0.3,
    duration: 1,
    ease: "power2.out",
    scrollTrigger: {
      trigger: '.blueprint-box',
      start: "top 70%"
    }
  });

  // Hero text animation
  gsap.from('.hero-text > *', {
    opacity: 0,
    y: 30,
    stagger: 0.2,
    duration: 1,
    ease: "power2.out"
  });

  // Blueprint box 3D rotation on scroll
  gsap.to('.blueprint-box', {
    rotateY: 5,
    rotateX: 2,
    ease: "none",
    scrollTrigger: {
      trigger: '.hero',
      start: "top top",
      end: "bottom top",
      scrub: true
    }
  });
});
</script>

</body>

</MainLayout>






<style>
  :root {
  --bg: #050505;
  --card: #111111;
  /* --accent: #12c2e9; */
  --text: #ffffff;
  --text-dim: #888888;
  --border: #1a1a1a;
}

body {
  background: var(--bg);
  color: var(--text);
  font-family: "Inter", -apple-system, sans-serif;
  margin: 0;
  line-height: 1.6;
}


/* Hero Section */
.hero {
  min-height: 80vh;
  align-items: center;
  padding: 0 10%;
  gap: 60px;
  border-bottom: 1px solid var(--border);
  

  display:grid;
  grid-template-columns: 1fr 1fr;
  

}


.hero-text {
  /* flex: 1; */
  

}

h1 {
  font-size: clamp(40px, 5vw, 70px);
  line-height: 1;
  margin: 0 0 20px;
  font-weight: 900;
  text-transform: uppercase;
  text-align: left;
}
.cyan {
  color: var(--accent);
}

.hero-p {
  font-size: 20px;
  color: var(--text-dim);
  max-width: 500px;
  margin-bottom: 40px;
}

.hero-visual {
  position: relative;
  justify-items:center;
  

}

/* Blueprint Visuals */
.blueprint-box {
  background: #0a0a0a;
  /* border: 1px solid var(--border); */
  position: relative;
  overflow: hidden;
  perspective: 1200px;
  box-shadow: 0 10px 50px rgba(0, 0, 0, 0.5);
}

.portrait-sim {
  position: relative;
  /* inset: 40px; */
  /* border: 1px solid rgba(18, 194, 233, 0.3); */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #222;
  font-weight: 900;
  font-size: 40px;
  transform-style: preserve-3d;
  box-shadow: inset 0 0 60px rgba(3, 169, 244, 0.1);
  
  > *{
  --_width:700px;

  object-fit:cover;
  width:var(--_width);
  height:auto;

}
}

.callout {
  position: absolute;
  color: var(--accent);
  font-size: 12px;
  letter-spacing: 2px;
  font-weight: bold;
  border-bottom: 1px solid var(--accent);
  padding-bottom: 4px;
  z-index: 10;
}
.c-1 {
  top: 20%;
  right: 10%;
}
.c-2 {
  bottom: 20%;
  left: 10%;
}

/* Educational Pillars Section */
.pillars {
  padding: 100px 10%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  background: #080808;
  perspective: 1000px;
}
.pillar-card {
  padding: 40px;
  border: 1px solid var(--border);
  background: var(--card);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  transform-style: preserve-3d;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}
.pillar-card:hover {
  border-color: var(--accent);
  transform: translateY(-10px) rotateX(5deg);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5), 0 0 40px rgba(3, 169, 244, 0.3);
}
.pillar-num {
  color: var(--accent);
  font-weight: 900;
  font-size: 14px;
  margin-bottom: 20px;
  display: block;
}
.pillar-card h3 {
  margin: 0 0 15px;
  font-size: 20px;
  letter-spacing: 1px;
}
.pillar-card p {
  color: var(--text-dim);
  font-size: 15px;
  margin: 0;
}

/* The "System" Section - Staggered */
.system-section {
  padding: 100px 10%;
  position: relative;
}
.system-row {
  display: flex;
  align-items: center;
  gap: 80px;
  margin-bottom: 120px;
}
.system-row.reverse {
  flex-direction: row-reverse;
}
.system-image {
  flex: 1;
  height: 400px;
  background: var(--card);
  border: 1px solid var(--border);
  position: relative;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}
.system-content {
  flex: 1;
  opacity: 0;
  transform: translateY(50px);
}
.system-content h2 {
  font-size: 32px;
  margin-bottom: 20px;
}

/* Methodology List */
.method-list {
  list-style: none;
  padding: 0;
}
.method-item {
  padding: 20px 0;
  border-bottom: 1px solid var(--border);
  display: flex;
  gap: 20px;
}
.method-item span {
  color: var(--accent);
  font-weight: bold;
}

/* Global Network Preview */
.global-footer {
  padding: 100px 10%;
  text-align: center;
  border-top: 1px solid var(--border);
  background: radial-gradient(circle at center, #111 0%, #050505 100%);
}
.global-footer h2 {
  font-size: 40px;
  margin-bottom: 40px;
}


</style>