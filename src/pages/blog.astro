}

.search-container {
  margin-top: var(--size-5);
}

.search-input {
  width: 100%;
  padding: var(--size-3);
  font-size: var(--fs-400);
  border: 1px solid #e5e5e5;
  background: var(--ltclr);
  color: var(--blkclr);
  transition: border-color 0.2s ease;
}

.search-input:hover {
