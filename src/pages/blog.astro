    position: sticky;
    top: 200px;
    padding: var(--size-7);
    border: 1px solid #e5e5e5;
    box-shadow: var(--shadow);
    border-radius: 0;
    margin-bottom: 0;
}

    .filter-toggle-btn {
        display: none;
    }
    
    .filter-header {
        border-bottom: none;
        padding-bottom: 0;
        margin-bottom: var(--size-3);

        
