        width: 80%;
        margin: auto;
    }

    .main-content {
    grid-template-columns: 280px 1fr;
    }
  }

.blog-posts {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--size-5);
  }




@media (min-width: 40em) {
  .blog-container {
     padding:0 var(--size-5);
  }

  .blog-posts {
    grid-template-columns: repeat(1, 1fr);
  }
}

@media (min-width: 64em) {
