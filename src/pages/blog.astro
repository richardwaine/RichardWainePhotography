  grid-template-columns: 1fr;
  gap: var(--size-7);
  /* gap:6em; */
  padding: var(--size-7) 0;

}

.filter-section {
position:relative;
top:auto;


  /* position: sticky; */ 
  /* top: 200px; */
  
  height: fit-content;

  padding:  var(--size-3);
  /* padding:  var(--size-7); */


  background: var(--ltclr);

  border: none;
  /* border: 1px solid #e5e5e5; */

