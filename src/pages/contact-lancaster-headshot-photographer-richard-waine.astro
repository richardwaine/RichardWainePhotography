---
// @ts-nocheck

import MainLayout from '../layouts/MainLayout.astro';
import Gallery from '../components/Gallery.astro';
import PrimaryButton from '../components/PrimaryButton.astro';
import PageTitle from '../components/PageTitle.astro';
import EnvelopeIcon from '../components/icons/EnvelopeIcon.astro';
import PhoneIcon from '../components/icons/PhoneIcon.astro';
import LocationIcon from '../components/icons/LocationIcon.astro';

const title = 'Contact - Richard Waine Photography';
const h1 = 'Contact Richard Waine Photography';
---

<MainLayout title="Contact Richard Waine Photography" description="Contact Richard Waine Photography for professional headshots,corporate photography, business portraits, and LinkedIn profile photos. Call (717) 925-0061 or email today">

	<script type="application/ld+json">
	{
		"@context": "https://schema.org",
		"@type": "ContactPoint",
		"contactType": "customer service",
		"telephone": "(717) 925-0061",
		"url": "https://www.richardwainephotography.com/contact-lancaster-headshot-photographer-richard-waine",
		"availableLanguage": "English",
		"parentOrganization": {
			"@type": "ProfessionalService",
			"@id": "https://www.richardwainephotography.com"
		}
	}
	</script>

<main class="contact-page">

  <!-- Title Section -->
  <PageTitle
    title={h1}
    subtitle="HOW MAY I ASSIST?"
    subtitleFirst={true}
    titleColor="var(--accent)"
    subtitleColor="var(--ltclr)"
    titleSize="var(--fs-500)"
    subtitleSize="var(--fs-800)"
  />

  <!-- Gallery Section -->
  <section id="gallery">
    <Gallery limit={8} showButton={false} />
  </section>

  <!-- Map/Info and Form Section -->
  <section id="map-form">
    <div class="wrapper">
      <div class="map-wrapper">
        <!-- Google Maps Embed -->
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3054.651336472875!2d-76.305992!3d40.0385633!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c627a7edfcfd67%3A0x9f55d6775e366e9a!2sRichard%20Waine%20Photography!5e0!3m2!1sen!2sus!4v1760976227043!5m2!1sen!2sus"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Google Maps location of Richard Waine Photography studio at 20 North Queen Street Lancaster PA">    
        </iframe>





        <!-- Contact Information -->
        <div class="contact-info">
          <a href="mailto:info@richardwaine.com" class="contact-item">
            <EnvelopeIcon />
            <span>info@richardwaine.com</span>
          </a>
          <a href="tel:7179250061" class="contact-item">
            <PhoneIcon />
            <span>(717) 925-0061</span>
          </a>
          <a href="https://maps.app.goo.gl/wtVRCXev3VWkweGi7" target="_blank" class="contact-item">
            <LocationIcon />
            <span>20 North Queen Street<br>Lancaster, PA 17603</span>
          </a>
        </div>
      </div>

      <div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/iframe-resizer/4.2.10/iframeResizer.min.js" integrity="sha256-0FsDr6k3iiIaao/F1olkJHUfEU/eGSYClQ7ZhVc2md8=" crossorigin="anonymous" defer></script>

        <iframe id="TaveContactForm" src="https://richard-waine-photography.vsco.page/inline/contact/1b4c0f?tpl=20260120&resizer=4.2.10" scrolling="no" frameborder="0" title="Contact form for Richard Waine Photography"></iframe>

        <script is:inline>
        window.addEventListener('load', function() {  
        const iframe = document.querySelector("#TaveContactForm");
        if (iframe && typeof iFrameResize !== 'undefined') {
            iFrameResize({log:true}, "#TaveContactForm");
        }
      });
        </script>
      </div>
    </div>
  </section>

</main>

<style>
  :root {
    --pagetitle-title-weight: var(--fw-semi-bold);
    --pagetitle-subtitle-weight: var(--fw-bold);
  }
.wrapper{
  margin-bottom:var(--size-7);
}
  .contact-page {
    background: var(--drkbg);
  }

  #gallery {
    background: var(--drkbg);
    padding-block: 0;

    > *{
      padding-inline:0;
    }
  }

  #gallery .page-title {
    font-size: var(--fs-700);
    font-weight: var(--fw-bold);
    color: var(--ltclr);
    margin-bottom: var(--size-3);
    text-align: center;
  }

  #gallery h1 {
    font-size: var(--fs-500);
    font-weight: var(--fw-semi-bold);
    color: var(--ltclr);
    text-align: center;
    margin-bottom: var(--size-7);
  }

  #map-form {
    padding: var(--size-8) 0 0 0;
    background: var(--ltclr);
    
  }

  #map-form .wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--size-7);

  }

.map-wrapper{
  padding-top:var(--size-5);
}

  iframe {
    width: 100%;
    border-radius: var(--size-2);
    overflow: hidden;

    margin-bottom: var(--size-5);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
    width:100%;
   
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--size-3);
    color: var(--blkclr);
    text-decoration: none;
    font-size: var(--fs-400);
    transition: color var(--transition-fast);
    

    
  }

  .contact-item:hover {
    color: var(--accent);
  }

  .contact-item :global(svg) {
    width: 20px;
    height: 25px;
    color: var(--blkclr);
    flex-shrink: 0;
  }

#TaveContactForm {
  width:100%;
  margin-inline:auto;
  min-height:calc(500px + var(--header-height) );
  /* min-height:calc(100% + var(--header-height)); */
  
}


  /* ==========================================
   TABLET - min-width: 48em (768px)
   ========================================== */
   
  @media (min-width: 48em) {
    .wrapper{
      /* width:80%;
      margin-inline:auto; */
       margin-bottom:0;
    }

  }

   /* ==========================================
   DESKTOP - min-width: 64em (1024px)
   ========================================== */

 @media (min-width: 64em) {
    #map-form .wrapper {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>

</MainLayout>
