---
// @ts-nocheck

import MainLayout from '../layouts/MainLayout.astro';
import Gallery from '../components/Gallery.astro';
import PrimaryButton from '../components/PrimaryButton.astro';

const title = 'Contact - Richard Waine Photography';
const h1 = 'Contact Richard Waine Photography';
---

<MainLayout title={title}>

<main class="contact-page">

  <!-- Gallery Section -->
  <section id="gallery">
    <div class="wrapper">
      <p class="page-title">HOW MAY I ASSIST?</p>
      <h1>{h1}</h1>
    </div>
    <Gallery limit={8} showButton={false} />
  </section>

  <!-- Map/Info and Form Section -->
  <section id="map-form">
    <div class="wrapper">
      <div>
        <!-- Google Maps Embed -->
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3057.5344766667!2d-76.30670492346469!3d40.03911797941219!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c623f3f8f3f3f3%3A0x1f3f3f3f3f3f3f3f!2s20%20N%20Queen%20St%2C%20Lancaster%2C%20PA%2017603!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
          width="100%"
          height="400"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>

        <!-- Contact Information -->
        <div class="contact-info">
          <a href="mailto:info@richardwaine.com" class="contact-item">
            <i class="fa fa-envelope"></i>
            <span>info@richardwaine.com</span>
          </a>
          <a href="tel:7179250061" class="contact-item">
            <i class="fa fa-phone"></i>
            <span>(717) 925-0061</span>
          </a>
          <a href="https://maps.google.com/?q=20+North+Queen+Street,+Lancaster,+PA+17603" target="_blank" class="contact-item">
            <i class="fa fa-map-marker"></i>
            <span>20 North Queen Street<br>Lancaster, PA 17603</span>
          </a>
        </div>
      </div>

      <div>
        <form class="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name <span class="required">*</span></label>
              <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
              <label for="lastName">Last Name <span class="required">*</span></label>
              <input type="text" id="lastName" name="lastName" required>
            </div>
          </div>

          <div class="form-group">
            <label for="email">Email <span class="required">*</span></label>
            <input type="email" id="email" name="email" required>
          </div>

          <div class="form-group">
            <label for="phone">Phone <span class="required">*</span></label>
            <input type="tel" id="phone" name="phone" required>
          </div>

          <div class="form-group">
            <label for="question">Question <span class="required">*</span></label>
            <textarea id="question" name="question" rows="6" placeholder="Please let me know how I can assist" required></textarea>
          </div>

          <PrimaryButton text="SUBMIT" type="submit" />
        </form>
      </div>
    </div>
  </section>

</main>

<style>
  .contact-page {
    background: var(--drkbg);
  }

  #gallery {
    background: var(--drkbg);
  }

  #gallery .page-title {
    font-size: var(--fs-700);
    font-weight: var(--fw-bold);
    color: var(--ltclr);
    margin-bottom: var(--size-3);
    text-align: center;
  }

  #gallery h1 {
    font-size: var(--fs-500);
    font-weight: var(--fw-semi-bold);
    color: var(--ltclr);
    text-align: center;
    margin-bottom: var(--size-7);
  }

  #map-form {
    padding: var(--size-8) 0;
    background: var(--ltclr);
  }

  #map-form .wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--size-7);
  }

  iframe {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: var(--shadow);
    margin-bottom: var(--size-5);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--size-3);
    color: var(--blkclr);
    text-decoration: none;
    font-size: var(--fs-450);
    transition: color var(--transition-fast);
  }

  .contact-item:hover {
    color: var(--accent);
  }

  .contact-item i {
    font-size: var(--fs-600);
    color: var(--blkclr);
    width: 30px;
    text-align: center;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--size-4);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--size-3);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--size-1);
  }

  .form-group label {
    font-family: var(--ff-primary);
    font-weight: var(--fw-semi-bold);
    font-size: var(--fs-400);
    color: var(--blkclr);
  }

  .required {
    color: var(--accent);
  }

  .form-group input,
  .form-group textarea {
    padding: var(--size-2);
    border: var(--border-thin) var(--border-light);
    border-radius: 4px;
    font-family: var(--ff-primary);
    font-size: var(--fs-400);
    transition: border-color var(--transition-fast);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--accent);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .contact-form :global(.btn) {
    width: auto;
    align-self: flex-start;
  }

  @media (max-width: 768px) {
    #map-form .wrapper {
      grid-template-columns: 1fr;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

</MainLayout>
