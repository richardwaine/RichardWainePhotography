---
import MainLayout from '../layouts/MainLayout.astro';
import Gallery from '../components/Gallery.astro';
---

<MainLayout title="Contact - Richard Waine Photography">
    <!-- Gallery Section -->
    <section id="gallery">
        <Gallery limit={8} showButton={false} />
    </section>

    <!-- Page Title -->
    <section id="contact-title" class="drkbg">
        <div class="wrapper">
            <p class="section-title center white spacing">HOW MAY I ASSIST?</p>
            <h1>CONTACT RICHARD WAINE PHOTOGRAPHY</h1>
        </div>
    </section>

    <!-- Map and Contact Form Section -->
    <section id="contact-content" class="ltbg">
        <div class="wrapper">
            <!-- Left Column: Map and Contact Info -->
            <div class="map-info-container">
                <!-- Google Maps Embed -->
                <div class="map-container">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3057.5344766667!2d-76.30670492346469!3d40.03911797941219!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c623f3f8f3f3f3%3A0x1f3f3f3f3f3f3f3f!2s20%20N%20Queen%20St%2C%20Lancaster%2C%20PA%2017603!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
                        width="100%"
                        height="400"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>

                <!-- Contact Information -->
                <div class="contact-info">
                    <a href="mailto:info@richardwaine.com" class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>info@richardwaine.com</span>
                    </a>
                    <a href="tel:7179250061" class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>(717) 925-0061</span>
                    </a>
                    <a href="https://maps.google.com/?q=20+North+Queen+Street,+Lancaster,+PA+17603" target="_blank" class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>20 North Queen Street<br>Lancaster, PA 17603</span>
                    </a>
                </div>
            </div>

            <!-- Right Column: Contact Form -->
            <div class="form-container">
                <form class="contact-form">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstName">First Name <span class="required">*</span></label>
                            <input type="text" id="firstName" name="firstName" required>
                        </div>
                        <div class="form-group">
                            <label for="lastName">Last Name <span class="required">*</span></label>
                            <input type="text" id="lastName" name="lastName" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email">Email <span class="required">*</span></label>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone <span class="required">*</span></label>
                        <input type="tel" id="phone" name="phone" required>
                    </div>

                    <div class="form-group">
                        <label for="question">Question <span class="required">*</span></label>
                        <textarea id="question" name="question" rows="6" placeholder="Please let me know how I can assist" required></textarea>
                    </div>

                    <button type="submit" class="submit-btn">SUBMIT</button>
                </form>
            </div>
        </div>
    </section>

<style>
    #contact-title {
        padding-block: var(--size-5);
    }

    #contact-title h1 {
        color: var(--ltclr);
        margin-top: var(--size-2);
    }

    #contact-content .wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--size-7);
        align-items: start;
    }

    .map-info-container {
        display: flex;
        flex-direction: column;
        gap: var(--size-5);
    }

    .map-container {
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: var(--shadow);
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: var(--size-4);
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: var(--size-3);
        color: var(--blkclr);
        text-decoration: none;
        font-size: var(--fs-450);
        transition: color var(--transition-fast);
    }

    .contact-item:hover {
        color: var(--accent);
    }

    .contact-item i {
        font-size: var(--fs-600);
        color: var(--accent);
        width: 30px;
        text-align: center;
    }

    .form-container {
        background: var(--ltclr);
        padding: var(--size-6);
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        gap: var(--size-4);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: var(--size-3);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: var(--size-1);
    }

    .form-group label {
        font-family: var(--ff-primary);
        font-weight: var(--fw-semi-bold);
        font-size: var(--fs-400);
        color: var(--blkclr);
    }

    .required {
        color: var(--accent);
    }

    .form-group input,
    .form-group textarea {
        padding: var(--size-2);
        border: var(--border-thin) var(--border-light);
        border-radius: 4px;
        font-family: var(--ff-primary);
        font-size: var(--fs-400);
        transition: border-color var(--transition-fast);
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--accent);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .submit-btn {
        background: var(--accent);
        color: var(--ltclr);
        padding: var(--size-3) var(--size-6);
        border: none;
        border-radius: 4px;
        font-family: var(--ff-primary);
        font-weight: var(--fw-bold);
        font-size: var(--fs-400);
        text-transform: uppercase;
        letter-spacing: var(--ltr-space);
        cursor: pointer;
        transition: all var(--transition-slow);
        box-shadow: 0 4px 12px rgba(3, 169, 244, 0.3);
    }

    .submit-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(3, 169, 244, 0.5);
    }

    /* Responsive */
    @media (max-width: 768px) {
        #contact-content .wrapper {
            grid-template-columns: 1fr;
        }

        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>
</MainLayout>
