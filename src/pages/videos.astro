---
import MainLayout from '../layouts/MainLayout.astro';
import PageTitle from '../components/PageTitle.astro';
import { buildVideoObjectSchema } from '../utils/schema';

const title = 'Videos - Richard Waine Photography';
const h1 = 'VIDEOS';

// Video schemas - Physical Technique Videos
const squinchVideoSchema = buildVideoObjectSchema(
  {
    name: "Mastering the Squinch | Look Confident in Photos",
    description: "Learn the squinch technique to look more confident and engaged in your professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/ff7nltdBCHs/maxresdefault.jpg",
    uploadDate: "2020-01-01",
    embedUrl: "https://www.youtube.com/embed/ff7nltdBCHs"
  },
  "Richard Waine Photography"
);

const jawlineVideoSchema = buildVideoObjectSchema(
  {
    name: "Mastering Jawlines in Photos | The Perfect Jawline Trick",
    description: "Learn the jawline technique to look your best in professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/Qe3oJnFtA_k/maxresdefault.jpg",
    uploadDate: "2020-01-01",
    embedUrl: "https://www.youtube.com/embed/Qe3oJnFtA_k"
  },
  "Richard Waine Photography"
);

const thinnerVideoSchema = buildVideoObjectSchema(
  {
    name: "How To Look Thinner | Holding Your Sub",
    description: "Posing techniques to look thinner and more confident in your professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/lXbOx36YXrU/maxresdefault.jpg",
    uploadDate: "2020-01-01",
    embedUrl: "https://www.youtube.com/embed/lXbOx36YXrU"
  },
  "Richard Waine Photography"
);

const spreadVideoSchema = buildVideoObjectSchema(
  {
    name: "Spread em to look better in pictures!",
    description: "Body positioning techniques for better headshots and professional photos.",
    thumbnailUrl: "https://img.youtube.com/vi/axFJvIfPMZc/maxresdefault.jpg",
    uploadDate: "2020-01-01",
    embedUrl: "https://www.youtube.com/embed/axFJvIfPMZc"
  },
  "Richard Waine Photography"
);

// Video schemas - Psychological Videos
const doveSketchVideoSchema = buildVideoObjectSchema(
  {
    name: "Dove -- Real Beauty Sketch Commercial",
    description: "Understanding self-perception vs how others see you. Important psychological insights for professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/rymT28Z6KQY/maxresdefault.jpg",
    uploadDate: "2013-04-15",
    embedUrl: "https://www.youtube.com/embed/rymT28Z6KQY"
  },
  "Richard Waine Photography"
);

const innerCriticVideoSchema = buildVideoObjectSchema(
  {
    name: "Dove Inner Critic | Are you your own worst critic?",
    description: "Overcoming your inner critic to achieve great results in your professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/PPjeelgG9Cg/maxresdefault.jpg",
    uploadDate: "2015-01-01",
    embedUrl: "https://www.youtube.com/embed/PPjeelgG9Cg"
  },
  "Richard Waine Photography"
);

const tedxVideoSchema = buildVideoObjectSchema(
  {
    name: "Bridging the self-acceptance gap with psyphotology | Anna Rowley & Peter Hurley | TEDxCambridge",
    description: "Understanding the psychology of being photographed and self-acceptance in professional headshots.",
    thumbnailUrl: "https://img.youtube.com/vi/oYJCDYNsL6A/maxresdefault.jpg",
    uploadDate: "2016-01-01",
    embedUrl: "https://www.youtube.com/embed/oYJCDYNsL6A"
  },
  "Richard Waine Photography"
);

const selfAcceptanceVideoSchema = buildVideoObjectSchema(
  {
    name: "Self Acceptance",
    description: "Self acceptance and confidence in professional headshot photography.",
    thumbnailUrl: "https://img.youtube.com/vi/B0NMXcVUvDs/maxresdefault.jpg",
    uploadDate: "2015-01-01",
    embedUrl: "https://www.youtube.com/embed/B0NMXcVUvDs"
  },
  "Richard Waine Photography"
);

---

<MainLayout title="Looking confident isn't easy! Let me help you look great!" description="Watch these videos before your professional headshot session to understand key factors that affect perceptions of confidence and approachability.">

<!-- Video Schemas - Physical Techniques -->
<script type="application/ld+json" set:html={JSON.stringify(squinchVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(jawlineVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(thinnerVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(spreadVideoSchema)} />

<!-- Video Schemas - Psychological -->
<script type="application/ld+json" set:html={JSON.stringify(doveSketchVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(innerCriticVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(tedxVideoSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(selfAcceptanceVideoSchema)} />

<PageTitle title={h1} titleColor="var(--ltclr)" />

<main class="videos-page">

  <!-- Quote Section -->
  <section id="page-header">
    <div class="wrapper">
      <blockquote class="quote">
        <p>"Your Smile is your logo, your personality is your business card, how you leave others feeling after an experience with you becomes your trademark"</p>
        <cite>- Jay Danzie</cite>
      </blockquote>
    </div>
  </section>

  <!-- The Physical Stuff -->
  <section id="physical-videos">
    <div class="wrapper">
      <h2>THE PHYSICAL STUFF</h2>

      <div class="video-grid">
        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/ff7nltdBCHs?wmode=opaque&enablejsapi=1"
            title="Mastering the Squinch | Look Confident in Photos"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/Qe3oJnFtA_k?wmode=opaque&enablejsapi=1"
            title="Mastering Jawlines in Photos | The Perfect Jawline Trick"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/lXbOx36YXrU?wmode=opaque&enablejsapi=1"
            title="How To Look Thinner | Holding Your Sub"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/axFJvIfPMZc?wmode=opaque&enablejsapi=1"
            title="Spread em to look better in pictures!"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- The Psychological Stuff -->
  <section id="psychological-videos">
    <div class="wrapper">
      <h2>THE PSYCHOLOGICAL STUFF</h2>

      <div class="video-grid">
        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/rymT28Z6KQY?feature=oembed&enablejsapi=1"
            title="Dove -- Real Beauty Sketch Commercial"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/PPjeelgG9Cg?list=PL0BRaXBPJ6ibbmuc0eIT9pR9I9VUBY_T_&index=28&wmode=opaque&enablejsapi=1"
            title="Dove Inner Critic | Are you your own worst critic?"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/oYJCDYNsL6A?wmode=opaque&enablejsapi=1"
            title="Bridging the self-acceptance gap with psyphotology | Anna Rowley & Peter Hurley | TEDxCambridge"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>

        <div class="video-container">
          <iframe
            src="https://www.youtube.com/embed/B0NMXcVUvDs?wmode=opaque&enablejsapi=1"
            title="Self Acceptance"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </section>

</main>


<style>
  :root {
    --pagetitle-h1-margin: 0;
  }

  html {
    overflow: hidden;
  }

  body {
    background: var(--drkbg);
  }

  

  .videos-page {
    background: var(--drkbg);
    color: var(--ltclr);
    display:grid;
    grid-template-rows: auto 1fr 1fr auto;
    align-content:center;
    gap:var(--size-7);
    margin-bottom:var(--size-7);
   

  }

  #page-header {
    text-align: center;
    padding-block: 0;
 
  }

  .quote {
    max-width: 800px;
    margin: 0 auto;
    font-style: italic;
    margin-bottom:2em;
  }

  .quote p {
    font-size: var(--fs-450);
    line-height: 1.6;
    margin-bottom: var(--size-1);
 

  }

  .quote cite {
    font-size: var(--fs-400);
    font-style: normal;
    color: var(--accent);
    
  }

  #physical-videos,
  #psychological-videos {
    display:grid;
    padding-block:var(--size-3);
    padding-inline:var(--size-2);
    background: var(--drkbg);
  

    
  }

  


  h2 {
    font-size: var(--fs-600);
    font-weight: var(--fw-bold);
    text-align: center;
    margin-top:0;
    margin-bottom: var(--size-3);
    letter-spacing: 2px;
  }

  .video-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--size-7);
  }

  .video-container {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */


    height: 0;
    overflow: hidden;
    border-radius: var(--size-2);
    box-shadow: 0 8px 24px var(--shadow-clr-soft);
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }




  /* ==========================================
   TABLET - min-width: 64em (1024px)
   ========================================== */
  @media (min-width: 64em) {
    .video-grid {
      grid-template-columns: repeat(4, 1fr);
      gap:var(--size-7);
       
    }
  }

  
</style>

</MainLayout>
