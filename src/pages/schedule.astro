---
import MainLayout from '../layouts/MainLayout.astro'
import ZoomPopOut from '../components/ZoomPopOut.astro'
import RatesCard from '../components/RatesCard.astro'
import Testimonials from '../components/Testimonials.astro';
import PageTitle from '../components/PageTitle.astro';
const h1 = 'Schedule Your Headshot Session';



---

<MainLayout title="Schedule Your Professional Headshot Session" description="Treat yourself to a 5-star experience, a few laughs, incredible headshot images, and the success that comes along with it!">

    <main>
        <div class="wrapper">


            <ZoomPopOut />

            <PageTitle
              subtitle="SCHEDULE"
              title={h1}
              subtitleFirst={true}
              subtitleSize="var(--fs-800)"
              titleSize="var(--fs-500)"
              subtitleColor="var(--blkclr)"
              titleColor="var(--accent)"
            />

                <div class="two-cols">


                  <Testimonials limit={1} filterByNames={["Michael Kealey"]} />



                <div class="scheduler">

                <iframe src="https://app.acuityscheduling.com/schedule.php?owner=13511326&owner=13511326&appointmentType=2893498" width="100%" height="800" frameborder="0"></iframe>																																	<script src="https://embed.acuityscheduling.com/js/embed.js" type="text/javascript"></script>
                        
                </div>



                </div>
    </main>
</MainLayout>



<style>

:root {
  --pagetitle-title-weight: var(--fw-semi-bold);
  --pagetitle-subtitle-weight: var(--fw-bold);
}

h1{
    margin-block:var(--size-3);
}

/*testimonials-2*/

.stars {
  color: var(--stars);
  //padding: var(--size-2) 0 0;
  padding-block: var(--size-2);
}





@media screen and (min-width: 67.5em) {
  .two-cols {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
  }
}





</style>