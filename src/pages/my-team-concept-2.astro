---
import MainLayout from '../layouts/MainLayout.astro'
import SecondaryButton from '../components/SecondaryButton.astro';

const h1 = 'My Team';

// Team member data
const lionel = {
  name: "Lionel Adriano",
  role: "Makeup Artist",
  image: "https://images.squarespace-cdn.com/content/v1/50f79c6fe4b00d3480c9bbf0/1591018523037-B15TIOQL6BR1MOFJAT68/Lionel-Adriano+-+%28400px%29+-+Richard+Waine+-+Lancaster-PA_0040.jpg",
  bio: [
    "Lionel is a world-class makeup artist who has worked with some of the world's most recognizable people. He has an amazing eye for color and complexion, and ensures that no detail is overlooked.",
    "Lionel is a certified M.A.C. makeup artist and was voted the best makeup artist in Lancaster County, Pennsylvania by the readers of Lancaster County Magazine, Susquehanna Style Magazine and Lancaster Newspaper.",
    "His attention to detail, positive attitude, and perfectionism gels very well with my operation.",
    "Lionel is an integral part of my workflow and client experience. Let him work his magic on you. Not only will you get pampered, but you will feel more beautiful than you already are!"
  ]
};

const lisa = {
  name: "Lisa Torba",
  role: "Stylist",
  image: "https://images.squarespace-cdn.com/content/v1/50f79c6fe4b00d3480c9bbf0/1577896434536-DDGV5412OJ1KEFT3IOU5/Lisa-Torba+-+%28500px%29+-+Richard+Waine+-+Lancaster-PA-0158.jpg",
  bio: [
    "Lisa is an incredible Personal Stylist for men. She helps to custom fit and style you with high-quality clothing that looks and feels great. She'll make your life easier and have you looking better than ever.",
    "Lisa caters to the needs and schedules of her clients by providing a collaborative, frustration-free shopping experience. After meticulously measuring you to ensure a proper fit, Lisa will guide you through the customization process, and style you to perfection.",
    "Working with Lisa will save you time and money while ensuring that you are among the best dressed in the room, regardless of the occasion.",
    "Contact Lisa ahead of your headshot or branding photo session to ensure you look and feel like a million bucks!"
  ],
  ctaText: "SCHEDULE WITH LISA",
  ctaUrl: "https://clientela.myjhilburn.com/stylist/15327"
};
---

<MainLayout title="My Team - Concept 2">

<!-- CONCEPT 2: ASYMMETRIC / EDITORIAL STYLE -->
<!-- Magazine-inspired with overlapping elements and diagonal cuts -->

<main class="team-page concept-2">
  <div class="page-header">
    <div class="header-content">
      <!-- <span class="header-label">Our Experts</span> -->
      <h1>{h1}</h1>
      <!-- <div class="header-accent"></div> -->
    </div>
  </div>

  <!-- Lionel's Section -->
  <section class="team-member lionel-section">
    <div class="member-grid">
      <div class="image-container lionel-image">
        <div class="image-frame">
          <img src={lionel.image} alt={`${lionel.name} - ${lionel.role}`} />
        </div>
        <div class="role-badge">
          <span>{lionel.role}</span>
        </div>
      </div>
      <div class="content-container lionel-content">
        <div class="content-box">
          <h2>{lionel.name}</h2>
          <div class="bio-content">
            {lionel.bio.map(paragraph => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
        <!-- <div class="accent-block"></div> -->
      </div>
    </div>
  </section>

  <!-- Lisa's Section -->
  <section class="team-member lisa-section">
    <div class="member-grid reverse">
      <div class="image-container lisa-image">
        <div class="image-frame">
          <img src={lisa.image} alt={`${lisa.name} - ${lisa.role}`} />
        </div>
        <div class="role-badge">
          <span>{lisa.role}</span>
        </div>
      </div>
      <div class="content-container lisa-content">
        <div class="content-box">
          <h2>{lisa.name}</h2>
          <div class="bio-content">
            {lisa.bio.map(paragraph => (
              <p>{paragraph}</p>
            ))}
          </div>
          <SecondaryButton url={lisa.ctaUrl} text={lisa.ctaText} />
        </div>
        <!-- <div class="accent-block"></div> -->
      </div>
    </div>
  </section>
</main>

<style is:global>
/* ========================================
   CONCEPT 2: ASYMMETRIC / EDITORIAL
   ======================================== */

.concept-2 {
  background: var(--ltclr);
  min-height: 100vh;
  overflow-x: hidden;
  
}

/* Page Header */
.page-header {
  position: relative;
  /* padding: var(--size-12) var(--size-3); */
  padding-top:var(--size-8);
  background: var(--drkbg);
  overflow: hidden;
}

.header-content {
  max-width: 1400px;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.header-label {
  display: block;
  font-size: var(--fs-350);
  font-weight: var(--fw-bold);
  letter-spacing: 0.3em;
  text-transform: uppercase;
  color: var(--accent);
  margin-bottom: var(--size-2);
}

.page-header h1 {
  font-size: var(--fs-800);
  font-weight: var(--fw-bold);
  text-transform: uppercase;
  color: var(--ltclr);
}
/* 
.header-accent {
  position: absolute;
  bottom: -50px;
  right: -100px;
  width: 400px;
  height: 400px;
  background: var(--accent);
  opacity: 0.1;
  clip-path: polygon(30% 0, 100% 0, 100% 70%, 70% 100%, 0 100%, 0 30%);
  transform: rotate(15deg);
}
  */

/* Team Member Sections */
.team-member {
  position: relative;
  padding: var(--size-12) 0;
}

.lionel-section {
  background: var(--drkbg);
}

.lisa-section {
  background: var(--drkbg);
}

/* Member Grid - Asymmetric Layout */
.member-grid {
  max-width: 1600px;
  margin: 0 auto;
  padding: 0 var(--size-5);
  display: grid;
  grid-template-columns: 45% 55%;
  gap: 0;
  position: relative;
}

.member-grid.reverse {
  grid-template-columns: 55% 45%;
}

/* Image Container - Overlapping and Angular */
.image-container {
  position: relative;
  z-index: 2;
}

.lionel-image {
  /* transform: translateX(80px); */
}

.lisa-image {
  /* transform: translateX(-80px); */
  order: 2;
}

.member-grid.reverse .lisa-content {
  order: 1;
}

.image-frame {
  position: relative;
  aspect-ratio: 3/4;
  clip-path: polygon(15px 0, 100% 0, calc(100% - 15px) 100%, 0 100%);
  overflow: hidden;
}

.image-frame img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Role Badge - Diagonal Element */
.role-badge {
  position: absolute;
  bottom: -20px;
  right: 40px;
  background: var(--accent);
  color: var(--drkbg);
  padding: var(--size-3) var(--size-7);
  font-weight: var(--fw-bold);
  font-size: var(--fs-350);
  letter-spacing: 0.15em;
  text-transform: uppercase;
  clip-path: polygon(15px 0, 100% 0, calc(100% - 15px) 100%, 0 100%);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  z-index: 3;
}

/* Content Container - Magazine Style */
.content-container {
  position: relative;
  display: flex;
  align-items: center;
  padding: var(--size-7);
}

.lionel-content {
  padding-left: var(--size-10);
}

.lisa-content {
  padding-right: var(--size-10);
  justify-content: flex-end;
}

.content-box {
  position: relative;
  z-index: 2;
  max-width: 600px;
}

.lionel-section .content-box {
  background: var(--ltclr);
  padding: var(--size-7);
  clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
}

.lisa-section .content-box {
  background: var(--ltclr);
  padding: var(--size-7);
  clip-path: polygon(30px 0, 100% 0, 100% 100%, 0 100%, 0 30px);
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
}

.content-box h2 {
  font-size: clamp(var(--fs-700), 4vw, var(--fs-800));
  font-weight: var(--fw-bold);
  text-transform: uppercase;
  color: var(--blkclr);
  margin-bottom: var(--size-5);
  letter-spacing: 0.05em;
  position: relative;
  padding-bottom: var(--size-3);
}

.content-box h2::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 80px;
  height: 3px;
  background: var(--accent);
}

.bio-content p {
  font-size: var(--fs-400);
  line-height: var(--line-height-relaxed);
  color: var(--blkclr);
  margin-bottom: var(--size-4);
}

/* Accent Block - Geometric Element */
/* 
.accent-block {
  position: absolute;
  width: 200px;
  height: 200px;
  background: var(--accent);
  opacity: 0.08;
  z-index: 1;
} 
  */

.lionel-content .accent-block {
  top: -40px;
  left: 40px;
  clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  transform: rotate(45deg);
}

.lisa-content .accent-block {
  bottom: -40px;
  right: 40px;
  clip-path: polygon(20px 0, 100% 0, calc(100% - 20px) 100%, 0 100%);
  transform: rotate(-10deg);
}

/* Responsive */
@media (max-width: 1200px) {
  .lionel-image {
    /* transform: translateX(40px); */
  }

  .lisa-image {
    /* transform: translateX(-40px); */
  }
}

@media (max-width: 1024px) {
  .member-grid,
  .member-grid.reverse {
    grid-template-columns: 1fr;
    gap: var(--size-7);
  }

  .lionel-image,
  .lisa-image {
    /* transform: translateX(0); */
    order: initial;
  }

  .lisa-content {
    order: initial;
  }

  .content-container {
    padding: var(--size-5);
  }

  .lionel-content,
  .lisa-content {
    padding: var(--size-5);
  }

  .image-frame {
    max-width: 600px;
    margin: 0 auto;
  }
}

@media (max-width: 768px) {
  .page-header {
    padding: var(--size-10) var(--size-3);
  }

  .team-member {
    padding: var(--size-8) 0;
  }

  .content-box {
    padding: var(--size-5);
  }
}
</style>

</MainLayout>
