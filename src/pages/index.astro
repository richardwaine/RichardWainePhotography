  "Lancaster",
  "PA",
  "+1-717-925-0061",
  ["Pennsylvania", "Lancaster", "Central Pennsylvania"]
);

// Aggregate Rating schema - 652 5-star reviews
const aggregateRatingSchema = buildAggregateRatingSchema(
  "Richard Waine Photography",
  "5",
  "652",
  "https://richardwainephotography.com"
