---
// CinematicHero.astro - Cinematic headshot showcase inspired by luxury product presentations
// @ts-nocheck
---

<div class="cinematic-hero">
    <!-- Clean Navigation -->
    <nav class="hero-nav">
        <div class="logo">
            <img src="/src/assets/Logo - Richard Waine Photography (transparent) white.png" alt="Richard Waine Photography">
        </div>
        <button class="nav-cta">SCHEDULE SESSION</button>
    </nav>

    <!-- Hero Stage -->
    <div class="hero-stage">
        <!-- Main Content -->
        <div class="hero-content">
            <div class="content-left">
                <h1 class="hero-title">
                    PREMIUM PROFESSIONAL<br>
                    <span class="highlight">HEADSHOT PHOTOGRAPHY</span>
                </h1>
                <p class="hero-subtitle">
                    Cinematic portraits that command attention and elevate your professional presence
                </p>
                <div class="hero-actions">
                    <button class="btn-primary">VIEW PORTFOLIO</button>
                    <button class="btn-secondary">
                        <span>BOOK SESSION</span>
                        <span class="arrow">â†’</span>
                    </button>
                </div>
            </div>
            
            <!-- Hero Image -->
            <div class="content-right">
                <div class="hero-showcase">
                    <div class="main-image" id="mainImage">
                        <img src="/src/assets/images/gallery/600px/(600px) - Ethan Haymovitz_Richard_Waine_Lancaster_PA_0135 - compressed.jpg" alt="Professional Headshot" />
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
    

    /* Main Container */
    .cinematic-hero {
        position: relative;
        width: 100vw;
        height: 100vh;
        background: url(src/assets/bts-hero-background.jpg);
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        font-family: 'Inter', sans-serif;
        color: var(--text-primary);
        overflow: hidden;
    }
    
    .scalable-hero-content {
        position: relative;
        width: 100%;
        height: 100%;
    }

    /* Clean Navigation */
    .hero-nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 9999;
        padding: 25px 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width:80%;
        margin-inline:auto;
        transform: none !important;
    }
    

    .logo img {
        height: 120px;
    }

    .nav-menu {
        display: flex;
        gap: 40px;
    }

    .nav-menu a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        position: relative;
    }

    .nav-menu a::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--accent);
        transition: width 0.3s ease;
    }

    .nav-menu a:hover {
        color: var(--text-primary);
    }

    .nav-menu a:hover::after {
        width: 100%;
    }

    .nav-cta {
        background: var(--accent);
        border: none;
        padding: 14px 28px;
        color: white;
        font-weight: 700;
        font-size: 0.85rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
        box-shadow: 0 8px 25px rgba(3, 169, 244, 0.3);
    }

    .nav-cta:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(3, 169, 244, 0.4);
        background: rgba(3, 169, 244, 0.9);
    }

    /* Hero Stage - Inspiration Layout */
    .hero-stage {
        position: relative;
        width: 100%;
        height: 100vh;
        padding: 0;
        display: flex;
        align-items: center;
        
    }

    /* Content Container with Glow */
    .hero-content {
        display: flex;
        width: 100%;
        max-width: 1400px;
        height: calc(100vh - 300px);
        align-items: center;
        margin: 140px auto 0;
        padding: 60px 80px;
        
        gap: 80px;
        position: relative;
        z-index: 10;
        background: rgba(10, 10, 10, 0.2);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        border: 1px solid rgba(3, 169, 244, 0.1);
        box-shadow: 
            0 0 60px rgba(3, 169, 244, 0.1),
            0 0 120px rgba(3, 169, 244, 0.08),
            0 0 180px rgba(3, 169, 244, 0.05),
            inset 0 1px 1px rgba(255, 255, 255, 0.05);
    }

    /* Left Content */
    .content-left {
        flex: 1;
        max-width: 600px;
        z-index: 20;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 900;
        line-height: 0.85;
        margin-bottom: 30px;
        letter-spacing: -3px;
        text-transform: uppercase;
    }

    .highlight {
        background: linear-gradient(135deg, var(--accent) 0%, rgba(3, 169, 244, 0.7) 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        
    }

    .hero-subtitle {
        font-size: 1.3rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 50px;
        font-weight: 400;
        max-width: 520px;
    }

    .hero-actions {
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .btn-primary {
        background: var(--accent);
        border: none;
        padding: 18px 36px;
        color: white;
        font-weight: 700;
        font-size: 0.95rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
        box-shadow: 0 15px 35px rgba(3, 169, 244, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 45px rgba(3, 169, 244, 0.4);
        background: rgba(3, 169, 244, 0.9);
    }

    .btn-secondary {
        background: var(--glass-bg);
        border: 2px solid var(--glass-border);
        padding: 16px 34px;
        color: var(--text-primary);
        font-weight: 700;
        font-size: 0.95rem;
        letter-spacing: 1px;
        text-transform: uppercase;
        cursor: pointer;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        display: flex;
        align-items: center;
        gap: 15px;
        clip-path: polygon(8px 0, 100% 0, calc(100% - 8px) 100%, 0 100%);
    }

    .arrow {
        transition: transform 0.3s ease;
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        border-color: var(--accent);
        transform: translateY(-3px);
    }

    .btn-secondary:hover .arrow {
        transform: translateX(5px);
    }

    /* Right Content - Hero Showcase */
    .content-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        position: relative;
        z-index: 20;
    }

    .hero-showcase {
        position: relative;
        width: 100%;
        max-width: 900px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-image {
        width: 800px;
        height: 500px;
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 
            30px 30px 80px var(--shadow-dark),
            -30px -30px 80px var(--shadow-light);
        transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .main-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top center;
        filter: contrast(1.1) saturate(1.1);
        transition: all 0.8s ease;
    }

    .main-image:hover {
        transform: scale(1.02);
        box-shadow: 
            40px 40px 100px var(--shadow-dark),
            -40px -40px 100px var(--shadow-light),
            0 0 60px rgba(3, 169, 244, 0.1);
    }


    /* Animations */
    @keyframes rotate {
        0% { transform: rotateZ(0deg); }
        100% { transform: rotateZ(360deg); }
    }

    @keyframes breathe {
        0%, 100% { opacity: 0.6; }
        50% { opacity: 1; }
    }

    /* Responsive Design */
    @media (max-width: 1400px) {
        .hero-content {
            max-width: 1200px;
            padding: 60px 60px;
            gap: 60px;
        }
        
        .main-image {
            width: 700px;
            height: 440px;
        }
        
        .hero-title {
            font-size: 4rem;
        }
    }

    @media (max-width: 1200px) {
        .hero-nav {
            padding: 25px 40px;
        }
        
        .hero-content {
            max-width: 1000px;
            padding: 50px 40px;
            gap: 50px;
        }
        
        .main-image {
            width: 600px;
            height: 375px;
        }
        
        .hero-title {
            font-size: 3.5rem;
        }
    }

    @media (max-width: 1024px) {
        .hero-content {
            flex-direction: column;
            height: auto;
            min-height: 100vh;
            padding: 40px 30px;
            gap: 40px;
            text-align: center;
        }
        
        .content-left {
            max-width: 100%;
        }
        
        .content-right {
            height: auto;
        }
        
        .main-image {
            width: 500px;
            height: 312px;
        }
        
        .hero-title {
            font-size: 3rem;
        }
        
        .hero-actions {
            justify-content: center;
        }
    }

    @media (max-width: 768px) {
        .hero-nav {
            padding: 20px 25px;
        }
        
        .nav-menu {
            display: none;
        }
        
        .logo img {
            height: 80px;
        }
        
        .hero-content {
            padding: 30px 20px;
            gap: 30px;
            border-radius: 20px;
            margin: 20px;
            width: calc(100% - 40px);
        }
        
        .main-image {
            width: 400px;
            height: 250px;
        }
        
        .hero-title {
            font-size: 2.5rem;
            line-height: 0.9;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
            margin-bottom: 40px;
        }
        
        .hero-actions {
            flex-direction: column;
            gap: 20px;
            width: 100%;
        }
        
        .btn-primary,
        .btn-secondary {
            width: 100%;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .cinematic-hero {
            background-attachment: scroll;
        }
        
        .hero-content {
            margin: 10px;
            width: calc(100% - 20px);
            padding: 25px 15px;
            border-radius: 15px;
        }
        
        .main-image {
            width: 320px;
            height: 200px;
            border-radius: 15px;
        }
        
        .hero-title {
            font-size: 2rem;
            letter-spacing: -2px;
        }
        
        .hero-subtitle {
            font-size: 1rem;
            margin-bottom: 30px;
        }
        
        .btn-primary,
        .btn-secondary {
            padding: 16px 24px;
            font-size: 0.85rem;
        }
        
        .nav-cta {
            padding: 12px 20px;
            font-size: 0.75rem;
        }
    }
</style>

<script>
    // Enhanced hover effects and smooth interactions
    document.addEventListener('DOMContentLoaded', () => {
        const mainImage = document.getElementById('mainImage');
        
        if (mainImage) {
            // Add subtle parallax effect on mouse move
            mainImage.addEventListener('mousemove', (e) => {
                const rect = mainImage.getBoundingClientRect();
                const x = (e.clientX - rect.left - rect.width / 2) / rect.width * 10;
                const y = (e.clientY - rect.top - rect.height / 2) / rect.height * 10;
                
                mainImage.style.transform = `perspective(1000px) rotateY(${x}deg) rotateX(${-y}deg) scale(1.02)`;
            });
            
            mainImage.addEventListener('mouseleave', () => {
                mainImage.style.transform = 'perspective(1000px) rotateY(0deg) rotateX(0deg) scale(1)';
            });
        }
    });
</script>