---
// @ts-nocheck
// PremiumHero.astro - Isolated component for testing the hero experience
---

<div class="hero-container">
    <!-- Navigation Header -->
    <nav class="nav-header">
        <div class="logo">
            <img src="/assets/Logo - Richard Waine Photography (transparent) white.png" alt="Richard Waine Photography">
        </div>
        <ul class="nav-menu">
            <li><a href="#portfolio">Portfolio</a></li>
            <li><a href="#services">Services</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
        <button class="cta-button">BOOK SESSION</button>
    </nav>

    <!-- Hero Stage -->
    <div class="hero-stage">
        <!-- Content Area -->
        <div class="content-area">
            <h1 class="main-title" id="main-title">ACTING<br>HEADSHOTS</h1>
            <p class="subtitle" id="subtitle">
                Capture your unique essence with premium headshots that open doors and create lasting impressions in the entertainment industry.
            </p>
            <div class="action-buttons">
                <button class="btn-primary">GET PRICING</button>
                <button class="btn-secondary">BOOK CONSULTATION</button>
            </div>
        </div>

        <!-- Image Showcase -->
        <div class="image-showcase">
            <div class="image-frame active">
                <img src="/assets/vendors/Dillon Snyder (16 x 9) - compressed.jpg" alt="Acting Headshot">
            </div>
            <div class="image-frame">
                <img src="/assets/gallery/600px/(600px) - Chubb Insurance_Richard_Waine_Lancaster_PA_0100 - compressed.jpg" alt="Corporate Headshot">
            </div>
            <div class="image-frame">
                <img src="/assets/gallery/600px/(600px) - Josh Outlar_Richard_Waine_Lancaster_PA_0181 - compressed.jpg" alt="LinkedIn Headshot">
            </div>
            <div class="image-frame">
                <img src="/assets/gallery/600px/(600px) - Ellen Taylor_Richard_Waine_Lancaster_PA_0093 - compressed.jpg" alt="Executive Portrait">
            </div>
        </div>
    </div>

    <!-- Navigation Arrows -->
    <div class="nav-arrows">
        <button class="nav-arrow" id="prev-btn">‹</button>
        <button class="nav-arrow" id="next-btn">›</button>
    </div>

    <!-- Navigation Dots -->
    <div class="nav-dots">
        <div class="nav-dot active" data-slide="0"></div>
        <div class="nav-dot" data-slide="1"></div>
        <div class="nav-dot" data-slide="2"></div>
        <div class="nav-dot" data-slide="3"></div>
    </div>

    <!-- Thumbnail Preview -->
    <div class="thumbnail-preview">
        <div class="thumbnail active" data-slide="0">
            <img src="/assets/vendors/Dillon Snyder (16 x 9) - compressed.jpg" alt="Acting">
        </div>
        <div class="thumbnail" data-slide="1">
            <img src="/assets/gallery/600px/(600px) - Chubb Insurance_Richard_Waine_Lancaster_PA_0100 - compressed.jpg" alt="Corporate">
        </div>
        <div class="thumbnail" data-slide="2">
            <img src="/assets/gallery/600px/(600px) - Josh Outlar_Richard_Waine_Lancaster_PA_0181 - compressed.jpg" alt="LinkedIn">
        </div>
        <div class="thumbnail" data-slide="3">
            <img src="/assets/gallery/600px/(600px) - Ellen Taylor_Richard_Waine_Lancaster_PA_0093 - compressed.jpg" alt="Executive">
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
    

    /* Main container */
    .hero-container {
        position: relative;
        width: 100vw;
        height: 100vh;
        background: radial-gradient(ellipse at center, #1a1a1a 0%, #000000 100%);
        font-family: 'Inter', sans-serif;
        color: var(--text-primary);
        overflow: hidden;
    }

    /* Navigation Header */
    .nav-header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        padding: 30px 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(20px);
        background: rgba(0, 0, 0, 0.3);
    }

    .logo {
        display: flex;
        align-items: center;
    }

    .logo img {
        height: 40px;
        width: auto;
    }

    .nav-menu {
        display: flex;
        gap: 40px;
        list-style: none;
    }

    .nav-menu a {
        color: var(--text-secondary);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

    .nav-menu a:hover {
        color: var(--text-primary);
    }

    .cta-button {
        background: linear-gradient(135deg, var(--accent), #ff6600);
        border: none;
        padding: 12px 24px;
        border-radius: 25px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(255, 69, 0, 0.3);
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 35px rgba(255, 69, 0, 0.4);
    }

    /* Main Hero Section */
    .hero-stage {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        max-width: 1920px;
        height: 80%;
        padding: 10em;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Image Container with 3D Effect */
    .image-showcase {
        position: relative;
        width: 1920px;
        height: auto;
        aspect-ratio: 16 / 9;
        perspective: 1000px;
        transform-style: preserve-3d;
    }

    .image-frame {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 15px;
        overflow: hidden;
        opacity: 0;
        transition: all 0.8s ease-out;
        box-shadow: 
            15px 15px 40px var(--neumorphic-dark),
            -15px -15px 40px var(--neumorphic-light);
    }

    .image-frame.active {
        opacity: 1;
        transform: translateZ(0) scale(1);
        box-shadow: 
            25px 25px 60px var(--neumorphic-dark),
            -25px -25px 60px var(--neumorphic-light);
    }

    .image-frame img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top center;
        filter: contrast(1.1) saturate(1.1);
    }

    /* Content Area */
    .content-area {
        position: absolute;
        left: 50px;
        top: 50%;
        transform: translateY(-50%);
        width: 600px;
        z-index: 100;
    }

    .main-title {
        font-size: 4.5rem;
        font-weight: 900;
        line-height: 0.9;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #ffffff 0%, #cccccc 100%);
        background-clip: text;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -3px;
        transition: opacity 0.3s ease;
    }

    .subtitle {
        font-size: 1.3rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin-bottom: 40px;
        font-weight: 400;
        transition: opacity 0.3s ease;
    }

    .action-buttons {
        display: flex;
        gap: 20px;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--accent), #ff6600);
        border: none;
        padding: 16px 32px;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        box-shadow: 0 10px 30px rgba(255, 69, 0, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(255, 69, 0, 0.4);
    }

    .btn-secondary {
        background: var(--glass);
        border: 1px solid rgba(255, 255, 255, 0.2);
        padding: 16px 32px;
        border-radius: 8px;
        color: var(--text-primary);
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        backdrop-filter: blur(10px);
    }

    .btn-secondary:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
    }

    /* Navigation Dots */
    .nav-dots {
        position: absolute;
        bottom: 60px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 15px;
        z-index: 100;
    }

    .nav-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        cursor: pointer;
        transition: all 0.4s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .nav-dot:hover {
        background: rgba(255, 255, 255, 0.4);
        transform: scale(1.2);
    }

    .nav-dot.active {
        background: var(--accent);
        box-shadow: 0 0 20px rgba(255, 69, 0, 0.5);
        transform: scale(1.3);
    }

    /* Navigation Arrows */
    .nav-arrows {
        position: absolute;
        bottom: 120px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        gap: 30px;
        z-index: 100;
    }

    .nav-arrow {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        background: var(--glass);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: var(--text-primary);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(15px);
        box-shadow: 
            8px 8px 20px var(--neumorphic-dark),
            -8px -8px 20px var(--neumorphic-light);
    }

    .nav-arrow:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.05);
    }

    /* Thumbnail Preview */
    .thumbnail-preview {
        position: absolute;
        bottom: 60px;
        right: 60px;
        display: flex;
        gap: 20px;
        z-index: 100;
    }

    .thumbnail {
        width: 80px;
        height: 60px;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
        border: 2px solid transparent;
        opacity: 0.7;
        box-shadow: 
            6px 6px 15px var(--neumorphic-dark),
            -6px -6px 15px var(--neumorphic-light);
    }

    .thumbnail:hover {
        opacity: 1;
        transform: translateY(-3px);
    }

    .thumbnail.active {
        opacity: 1;
        border-color: var(--accent);
        transform: translateY(-3px);
        box-shadow: 
            8px 8px 20px var(--neumorphic-dark),
            -8px -8px 20px var(--neumorphic-light),
            0 0 15px rgba(255, 69, 0, 0.3);
    }

    .thumbnail img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top center;
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .hero-stage {
            width: 95%;
            height: 75%;
        }
        
        .image-showcase {
            width: 500px;
            height: 600px;
        }
        
        .content-area {
            left: -250px;
            width: 350px;
        }
        
        .main-title {
            font-size: 3.5rem;
        }
    }

    @media (max-width: 768px) {
        .hero-stage {
            flex-direction: column;
            text-align: center;
        }
        
        .content-area {
            position: relative;
            left: 0;
            top: 0;
            transform: none;
            width: 100%;
            margin-bottom: 40px;
        }
        
        .image-showcase {
            width: 350px;
            height: 450px;
        }
        
        .main-title {
            font-size: 2.5rem;
        }
    }
</style>

<script>
    class PremiumHeadshotExperience {
        currentSlide: number;
        totalSlides: number;
        isAnimating: boolean;
        slides: NodeListOf<Element>;
        dots: NodeListOf<Element>;
        thumbnails: NodeListOf<Element>;
        mainTitle: HTMLElement | null;
        subtitle: HTMLElement | null;
        slideData: Array<{title: string, subtitle: string}>;

        constructor() {
            this.currentSlide = 0;
            this.totalSlides = 4;
            this.isAnimating = false;
            
            this.slides = document.querySelectorAll('.image-frame');
            this.dots = document.querySelectorAll('.nav-dot');
            this.thumbnails = document.querySelectorAll('.thumbnail');
            
            this.mainTitle = document.getElementById('main-title');
            this.subtitle = document.getElementById('subtitle');
            
            this.slideData = [
                {
                    title: 'ACTING<br>HEADSHOTS',
                    subtitle: 'Capture your unique essence with premium headshots that open doors and create lasting impressions in the entertainment industry.'
                },
                {
                    title: 'CORPORATE<br>PORTRAITS',
                    subtitle: 'Professional imagery that conveys confidence, competence, and executive presence for your business success.'
                },
                {
                    title: 'LINKEDIN<br>PROFILES',
                    subtitle: 'Stand out in the digital landscape with headshots optimized for professional networking and career advancement.'
                },
                {
                    title: 'EXECUTIVE<br>PORTRAITS',
                    subtitle: 'Sophisticated portraiture for C-level executives and business leaders who demand excellence and commanding presence.'
                }
            ];
            
            this.init();
        }
        
        init() {
            // Navigation arrows
            document.getElementById('prev-btn')?.addEventListener('click', () => this.previousSlide());
            document.getElementById('next-btn')?.addEventListener('click', () => this.nextSlide());
            
            // Dots navigation
            this.dots.forEach((dot: Element, index: number) => {
                dot.addEventListener('click', () => this.goToSlide(index));
            });
            
            // Thumbnail navigation
            this.thumbnails.forEach((thumb: Element, index: number) => {
                thumb.addEventListener('click', () => this.goToSlide(index));
            });
        }
        
        goToSlide(index: number) {
            if (this.isAnimating || index === this.currentSlide) return;
            
            this.isAnimating = true;
            
            // Remove active classes
            this.slides[this.currentSlide].classList.remove('active');
            this.dots[this.currentSlide].classList.remove('active');
            this.thumbnails[this.currentSlide].classList.remove('active');
            
            // Update current slide
            this.currentSlide = index;
            
            // Add active classes
            this.slides[this.currentSlide].classList.add('active');
            this.dots[this.currentSlide].classList.add('active');
            this.thumbnails[this.currentSlide].classList.add('active');
            
            // Update content with smooth transition
            this.updateContent();
            
            // Reset animation lock
            setTimeout(() => {
                this.isAnimating = false;
            }, 1000);
        }
        
        updateContent() {
            if (this.mainTitle) this.mainTitle.style.opacity = '0.5';
            if (this.subtitle) this.subtitle.style.opacity = '0.5';
            
            setTimeout(() => {
                const data = this.slideData[this.currentSlide];
                if (this.mainTitle) this.mainTitle.innerHTML = data.title;
                if (this.subtitle) this.subtitle.textContent = data.subtitle;
                
                if (this.mainTitle) this.mainTitle.style.opacity = '1';
                if (this.subtitle) this.subtitle.style.opacity = '1';
            }, 200);
        }
        
        nextSlide() {
            const next = (this.currentSlide + 1) % this.totalSlides;
            this.goToSlide(next);
        }
        
        previousSlide() {
            const prev = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
            this.goToSlide(prev);
        }
    }
    
    // Initialize when DOM is ready
    document.addEventListener('DOMContentLoaded', () => {
        new PremiumHeadshotExperience();
    });
</script>