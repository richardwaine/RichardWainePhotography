---
interface Props {
  category: string;
  imageSrc: string;
  imageAlt: string;
  cardCategory: string;
  blogTitle: string;
  blogExcerpt: string;
  slug: string;
}

const { category, imageSrc, imageAlt, cardCategory, blogTitle, blogExcerpt, slug } = Astro.props;
---

<div class="blog-card" data-category={category}>
        <img src={imageSrc} alt={imageAlt}>
        <div class="blog-card-content">
              <span class="blog-card-category">{cardCategory}</span>
              <h3 class="blog-card-title">{blogTitle}</h3>
              <p class="blog-card-excerpt">{blogExcerpt}</p>
              <a href={`/blog/${slug}`} class="read-more">Read More</a>
        </div>
</div>

          

<style>




h3 {

  font-size: var(--fs-400);
  font-weight:bold;
  text-transform:uppercase;
  
}

p {
  text-wrap: pretty;
}

a {
  color: var(--accent);
  text-decoration: none;
}


.blog-card {
  background: var(--ltclr);
  border: 1px solid #e5e5e5;
  color: var(--blkclr);
  transition: box-shadow 0.2s ease;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.blog-card:hover {
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
}

.blog-card img {
  width: 100%;
  height: 180px;
  object-fit: cover;
  object-position: center;
}

.blog-card-content {
  padding:var(--size-3);
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* line-height: 1.5; */
}

.blog-card-category {
  display: none;
  padding: 8px;
  background: transparent;
  color: var(--blkclr);
  font-size:var(--fs-350);
  margin-bottom: var(--size-3);

}

.blog-card-excerpt {
  color: var(--blkclr);
  font-size:var(--fs-350);
  margin-bottom: var(--size-3);
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.blog-card h3 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-wrap: break-word; /* Add this */
  line-height: 1.2em; /* Add this */
  /* height: 2.4em; Add this */
  margin-block:var(--size-3);
}

.read-more {
  display: inline-block;
  padding: 8px var(--size-3);
  background: var(--ltclr);
  color: var(--blkclr);
  font-size:var(--fs-350);
  border: 1px solid var(--blkclr);
  transition: all 0.2s ease;
  margin-top: auto;
  width: fit-content;
}

.read-more:hover {
  background: var(--blkclr);
  color: var(--ltclr);
}

.read-more:focus-visible {
  outline: none;
  box-shadow: 0 0 0 2px var(--blkclr);
}

@media (min-width: 768px) {
  .main-content {
    grid-template-columns: 280px 1fr;
    
  }

  .blog-card img {
    height: 200px;
  }
}
</style>